<Application
    x:Class="Aniki.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:Aniki.Converters"
    RequestedThemeVariant="Dark">
    <Application.Styles>
        <FluentTheme />
        <Style Selector="ScrollViewer">
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="*,Auto">
                        <ScrollContentPresenter Grid.Column="0" Grid.Row="0" 
                                              Name="PART_ContentPresenter" 
                                              Content="{TemplateBinding Content}" />
                        <ScrollBar Grid.Column="1" Grid.Row="0" 
                                  Name="PART_VerticalScrollBar" 
                                  Orientation="Vertical" 
                                  Visibility="{TemplateBinding (ScrollViewer.VerticalScrollBarVisibility)}" />
                        <ScrollBar Grid.Column="0" Grid.Row="1" 
                                  Name="PART_HorizontalScrollBar" 
                                  Orientation="Horizontal" 
                                  Visibility="{TemplateBinding (ScrollViewer.HorizontalScrollBarVisibility)}" />
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="ScrollBar">
            <Setter Property="Width" Value="8" />
            <Setter Property="MinWidth" Value="8" />
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="Transparent">
                        <Track Name="PART_Track" 
                              IsDirectionReversed="true" 
                              Orientation="{TemplateBinding Orientation}">
                            <Thumb Name="PART_Thumb" 
                                  Background="{StaticResource PrimaryDarker}" 
                                  CornerRadius="4" />
                        </Track>
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="ScrollBar[Orientation=Horizontal]">
            <Setter Property="Height" Value="8" />
            <Setter Property="MinHeight" Value="8" />
        </Style>
    </Application.Styles>
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Resources/MainResources.axaml" />
                <ResourceDictionary>
                    <conv:GreaterThanZeroConverter x:Key="GreaterThanZeroConverter" />
                    <conv:SeederColorConverter x:Key="SeederColorConverter" />
                    <conv:StringToIntConverter x:Key="StringToIntConverter" />
                    <conv:TimeToOffsetConverter x:Key="TimeToOffsetConverter" />
                    <conv:AnimeTypeToColorConverter x:Key="AnimeTypeToColorConverter" />
                    <conv:ValueToGridLengthConverter  x:Key="ValueToGridLengthConverter" />
                    <conv:BooleanInverterConverter x:Key="BooleanInverterConverter" />
                    <conv:EqualToZeroConverter x:Key="EqualToZeroConverter" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>