<UserControl
    x:Class="Aniki.Views.WatchAnimeView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:Aniki.Views;assembly=Aniki"
    xmlns:vm="clr-namespace:Aniki.ViewModels;assembly=Aniki"
    x:DataType="vm:WatchAnimeViewModel">
    <Border
        x:Name="Root"
        Padding="16"
        HorizontalAlignment="Stretch"
        Margin="30,50,30,0"
        VerticalAlignment="Stretch"
        Background="{StaticResource BackgroundBlack}">
        <TabControl SelectedIndex="{Binding SelectedTabIndex}">
            <TabItem Header="Downloaded">
                <views:DownloadedView DataContext="{Binding DownloadedViewModel}"/>
            </TabItem>
            <TabItem Header="Online">
                <views:OnlineView DataContext="{Binding OnlineViewModel}"/>
            </TabItem>
        </TabControl>
    </Border>
</UserControl>