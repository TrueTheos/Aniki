<!-- ReSharper disable Xaml.StyleClassNotFound -->
<UserControl
    x:Class="Aniki.Views.AnimeDetailsView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="clr-namespace:Aniki.Models;assembly=Aniki"
    xmlns:views="clr-namespace:Aniki.Views;assembly=Aniki"
    xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
    xmlns:vm="clr-namespace:Aniki.ViewModels;assembly=Aniki"
    x:DataType="vm:AnimeDetailsViewModel">
    <Border
        x:Name="Root"
        Padding="0"
        Background="{StaticResource BackgroundBlack}">
        <Grid>
            <!--  Anime Details Panel  -->
            <Border
                Padding="16"
                Background="{StaticResource BackgroundBlack}"
                IsVisible="{Binding SelectedAnime, Converter={x:Static ObjectConverters.IsNotNull}}">
                <TabControl Margin="0" Padding="0">
                    <!--  Info Tab  -->
                    <TabItem Header="Anime Info">
                        <Grid Margin="0,16,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Border
                                Padding="16"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Background="{StaticResource Background1}">
                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                    <Grid Margin="0,0,0,0" IsVisible="{Binding !IsLoading}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <!--  Anime Title and Metadata  -->
                                        <Grid Grid.Row="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>

                                            <!--  Title and Status  -->
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock
                                                    Grid.Column="0"
                                                    VerticalAlignment="Center"
                                                    FontSize="28"
                                                    FontWeight="Bold"
                                                    Foreground="White"
                                                    Text="{Binding Details.Title}"
                                                    TextWrapping="Wrap" />

                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <Button Classes="SearchButton" Command="{Binding OpenMalPageCommand}" Margin="10,0,0,0" VerticalAlignment="Center" ToolTip.Tip="Open MAL page">
                                                        <Image Source="{SvgImage /Resources/Icons/globe_icon.svg}" Width="20" Height="20"/>
                                                    </Button>
                                                    <Button Classes="SearchButton" Command="{Binding RemoveFromListCommand}" Margin="10,0,0,0" VerticalAlignment="Center" ToolTip.Tip="Remove from list" IsVisible="{Binding Details.MyListStatus, Converter={x:Static ObjectConverters.IsNotNull}}">
                                                        <Image Source="{SvgImage /Resources/Icons/delete_icon.svg}" Width="20" Height="20"/>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>

                                            <!--  Picture and Rating  -->
                                            <Grid Grid.Row="1" Margin="0,16,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" Orientation="Vertical">
                                                    <Border
                                                        Width="200"
                                                        Height="300"
                                                        BoxShadow="0 4 12 0 #40000000"
                                                        ClipToBounds="True"
                                                        CornerRadius="8">
                                                        <Image asyncImageLoader:ImageLoader.Source="{Binding ImageUrl}" Stretch="UniformToFill" />
                                                    </Border>

                                                    <Panel Margin="0,16,0,0">
                                                        <Button
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Classes="Purple"
                                                            Command="{Binding AddToListCommand}"
                                                            Content="Add to list"
                                                            IsVisible="{Binding Details.MyListStatus, Converter={x:Static ObjectConverters.IsNull}}" />
                                                        <Grid IsVisible="{Binding Details.MyListStatus, Converter={x:Static ObjectConverters.IsNotNull}}">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto" />
                                                                <RowDefinition Height="Auto" />
                                                            </Grid.RowDefinitions>

                                                            <!--  Rating  -->
                                                            <TextBlock
                                                                Grid.Row="0"
                                                                Grid.Column="0"
                                                                VerticalAlignment="Center"
                                                                FontSize="16"
                                                                Foreground="{StaticResource White}"
                                                                Text="Your Rating:" />
                                                            <ComboBox
                                                                Grid.Row="0"
                                                                Grid.Column="1"
                                                                Width="120"
                                                                Margin="10,5,0,5"
                                                                ItemsSource="{Binding ScoreOptions}"
                                                                SelectedItem="{Binding SelectedScore, Mode=Default}" />

                                                            <!--  Status  -->
                                                            <TextBlock
                                                                Grid.Row="1"
                                                                Grid.Column="0"
                                                                VerticalAlignment="Center"
                                                                FontSize="16"
                                                                Foreground="{StaticResource White}"
                                                                Text="Status:" />
                                                            <ComboBox
                                                                Grid.Row="1"
                                                                Grid.Column="1"
                                                                Width="120"
                                                                Margin="10,5,0,5"
                                                                ItemsSource="{Binding StatusOptions}"
                                                                SelectedItem="{Binding SelectedStatus, Mode=Default}" />
                                                        </Grid>
                                                    </Panel>
                                                </StackPanel>

                                                <!--  Episodes Info  -->
                                                <StackPanel Grid.Column="1" Margin="20,0,0,0">
                                                    <StackPanel IsVisible="{Binding Details.MyListStatus, Converter={x:Static ObjectConverters.IsNotNull}}">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto" />
                                                                <RowDefinition Height="Auto" />
                                                            </Grid.RowDefinitions>

                                                            <!--  Top Row: Text and Buttons side by side  -->
                                                            <StackPanel
                                                                Grid.Row="0"
                                                                VerticalAlignment="Center"
                                                                Orientation="Horizontal"
                                                                Spacing="10">
                                                                <TextBlock
                                                                    VerticalAlignment="Center"
                                                                    FontSize="16"
                                                                    Foreground="{StaticResource White}">
                                                                    <Run Text="Episodes: " />
                                                                    <Run FontWeight="SemiBold" Text="{Binding EpisodesWatched}" />
                                                                    <Run Text=" / " />
                                                                    <Run Text="{Binding Details.NumEpisodes}" />
                                                                </TextBlock>

                                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                                    <Button
                                                                        Width="24"
                                                                        Height="24"
                                                                        Padding="5"
                                                                        Classes="Purple"
                                                                        Command="{Binding DecreaseEpisodeCount}"
                                                                        IsEnabled="{Binding CanDecreaseEpisodeCount}">
                                                                        <TextBlock
                                                                            HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"
                                                                            Text="-" />
                                                                    </Button>
                                                                    <Button
                                                                        Width="24"
                                                                        Height="24"
                                                                        Padding="5"
                                                                        Classes="Purple"
                                                                        Command="{Binding IncreaseEpisodeCount}"
                                                                        IsEnabled="{Binding CanIncreaseEpisodeCount}">
                                                                        <TextBlock
                                                                            HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"
                                                                            Text="+" />
                                                                    </Button>
                                                                </StackPanel>
                                                            </StackPanel>

                                                            <!--  Bottom Row: Progress Bar  -->
                                                            <ProgressBar
                                                                Grid.Row="1"
                                                                Height="8"
                                                                Margin="0,6,6,0"
                                                                Background="{StaticResource Background0}"
                                                                Foreground="{StaticResource Primary}"
                                                                Maximum="{Binding Details.NumEpisodes}"
                                                                Value="{Binding EpisodesWatched}" />
                                                        </Grid>
                                                    </StackPanel>

                                                    <ScrollViewer Margin="0,24,0,0" VerticalScrollBarVisibility="Auto">
                                                        <StackPanel>
                                                            <TextBlock
                                                                FontSize="20"
                                                                FontWeight="SemiBold"
                                                                Foreground="{StaticResource Primary}"
                                                                Text="Synopsis" />
                                                            <TextBlock
                                                                Margin="0,0,0,0"
                                                                Padding="0,10,0,0"
                                                                Foreground="{StaticResource White}"
                                                                LineHeight="1.5"
                                                                LineSpacing="15"
                                                                Text="{Binding Details.Synopsis}"
                                                                TextWrapping="Wrap" />
                                                        </StackPanel>
                                                    </ScrollViewer>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </Grid>

                                    <Grid
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        IsVisible="{Binding IsLoading}">
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <ProgressBar Width="300" IsIndeterminate="True" />
                                            <TextBlock
                                                Margin="0,10,0,0"
                                                HorizontalAlignment="Center"
                                                FontSize="16"
                                                Foreground="{StaticResource White}"
                                                Text="Loading details..." />
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>
                    </TabItem>

                    <TabItem Header="Torrents">
                        <views:TorrentSearchView DataContext="{Binding TorrentSearchViewModel}" />
                    </TabItem>

                    <!--  Watch Anime  -->
                    <TabItem Foreground="{StaticResource Green}" Header="Watch!">
                        <Grid Margin="0,16,0,0">
                            <views:WatchAnimeView Grid.Column="1" DataContext="{Binding WatchAnimeViewModel}" />
                        </Grid>
                    </TabItem>
                </TabControl>
            </Border>

            <!--  Empty state for when no anime is selected  -->
            <Border
                Grid.Column="2"
                Background="{StaticResource Background0}"
                IsVisible="{Binding SelectedAnime, Converter={x:Static ObjectConverters.IsNull}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Viewbox Stretch="Uniform" 
                             MaxWidth="400" MaxHeight="400"
                             MinWidth="300" MinHeight="300">
                        <Image Source="/Resources/nothingtoseehere_transparent_small.png"
                               RenderOptions.BitmapInterpolationMode="HighQuality"
                               RenderOptions.EdgeMode="Antialias"/>
                    </Viewbox>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
