<UserControl
    x:Class="Aniki.Views.AnimeDetailsView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="clr-namespace:Aniki.Models;assembly=Aniki"
    xmlns:views="clr-namespace:Aniki.Views;assembly=Aniki"
    xmlns:vm="clr-namespace:Aniki.ViewModels;assembly=Aniki"
    x:DataType="vm:AnimeDetailsViewModel">
    <Border
        x:Name="Root"
        Padding="0"
        Background="{StaticResource Background0}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Anime List Panel  -->
            <Border
                Grid.Column="0"
                BorderBrush="#1a545353"
                BorderThickness="0,0,2,0">
                <Grid Background="{StaticResource Background0}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  Filter Controls  -->
                    <Grid Grid.Row="0" Margin="12,12,12,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button
                            Grid.Column="0"
                            Width="36"
                            Height="36"
                            Padding="8"
                            ToolTip.Tip="Filter Options">
                            <!--  Filter Icon  -->
                            <Path
                                Data="M10,18V16H14V18H10M3,6V8H21V6H3M6,13H18V11H6V13Z"
                                Fill="White"
                                Stretch="Uniform" />
                        </Button>

                        <ComboBox
                            Grid.Column="1"
                            Margin="8,0,0,0"
                            HorizontalAlignment="Stretch"
                            ItemsSource="{Binding FilterOptions}"
                            SelectedItem="{Binding SelectedFilter}" />
                    </Grid>

                    <!--  Anime List  -->
                    <ListBox
                        Grid.Row="1"
                        Margin="12,0,0,12"
                        Background="Transparent"
                        ItemsSource="{Binding AnimeList}"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        SelectedItem="{Binding SelectedAnime, Mode=TwoWay}">
                        <ListBox.Styles>
                            <Style Selector="ScrollBar">
                                <Setter Property="Background" Value="{StaticResource Background0}" />
                                <Setter Property="MinWidth" Value="16" />
                                <Setter Property="AllowAutoHide" Value="False" />
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="models:AnimeData">
                                <Border
                                    Margin="2"
                                    Padding="12"
                                    Background="{StaticResource Background1}"
                                    BoxShadow="0 3 6 0 #20000000"
                                    CornerRadius="6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Anime Title and Status  -->
                                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                            <TextBlock
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Foreground="White"
                                                MaxLines="2"
                                                Text="{Binding Node.Title}"
                                                TextTrimming="CharacterEllipsis"
                                                TextWrapping="Wrap" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>


            <!--  Anime Details Panel  -->
            <Border
                Grid.Column="1"
                Padding="16"
                Background="{StaticResource Background0}"
                IsVisible="{Binding SelectedAnime, Converter={x:Static ObjectConverters.IsNotNull}}">
                <TabControl Margin="0" Padding="0">
                    <!--  Info Tab  -->
                    <TabItem Header="Anime Info">
                        <Grid Margin="0,16,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Border
                                Padding="16"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Background="{StaticResource Background1}">
                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                    <Grid Margin="0,0,0,0" IsVisible="{Binding !IsLoading}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <!--  Anime Title and Metadata  -->
                                        <Grid Grid.Row="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>

                                            <!--  Title and Status  -->
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock
                                                    Grid.Column="0"
                                                    FontSize="28"
                                                    FontWeight="Bold"
                                                    Foreground="White"
                                                    Text="{Binding Details.Title}"
                                                    TextWrapping="Wrap" />
                                            </Grid>

                                            <!--  Picture and Rating  -->
                                            <Grid Grid.Row="1" Margin="0,16,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" Orientation="Vertical">
                                                    <Border
                                                        Width="200"
                                                        Height="300"
                                                        BoxShadow="0 4 12 0 #40000000"
                                                        ClipToBounds="True"
                                                        CornerRadius="8">
                                                        <Image Source="{Binding Details.Picture}" Stretch="UniformToFill" />
                                                    </Border>

                                                    <Grid Margin="0,16,0,0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                        </Grid.RowDefinitions>

                                                        <!--  Rating  -->
                                                        <TextBlock
                                                            Grid.Row="0"
                                                            Grid.Column="0"
                                                            VerticalAlignment="Center"
                                                            FontSize="16"
                                                            Foreground="{StaticResource White}"
                                                            Text="Your Rating:" />
                                                        <ComboBox
                                                            Grid.Row="0"
                                                            Grid.Column="1"
                                                            Width="120"
                                                            Margin="10,5,0,5"
                                                            ItemsSource="{Binding ScoreOptions}"
                                                            SelectedItem="{Binding SelectedScore, Mode=Default}" />

                                                        <!--  Status  -->
                                                        <TextBlock
                                                            Grid.Row="1"
                                                            Grid.Column="0"
                                                            VerticalAlignment="Center"
                                                            FontSize="16"
                                                            Foreground="{StaticResource White}"
                                                            Text="Status:" />
                                                        <ComboBox
                                                            Grid.Row="1"
                                                            Grid.Column="1"
                                                            Width="120"
                                                            Margin="10,5,0,5"
                                                            ItemsSource="{Binding StatusOptions}"
                                                            SelectedItem="{Binding SelectedStatus, Mode=Default}" />
                                                    </Grid>
                                                </StackPanel>

                                                <!--  Episodes Info  -->
                                                <StackPanel Grid.Column="1" Margin="20,0,0,0">
                                                    <StackPanel>
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto" />
                                                                <RowDefinition Height="Auto" />
                                                            </Grid.RowDefinitions>

                                                            <!--  Top Row: Text and Buttons side by side  -->
                                                            <StackPanel
                                                                Grid.Row="0"
                                                                VerticalAlignment="Center"
                                                                Orientation="Horizontal"
                                                                Spacing="10">
                                                                <TextBlock
                                                                    VerticalAlignment="Center"
                                                                    FontSize="16"
                                                                    Foreground="{StaticResource White}">
                                                                    <Run Text="Episodes: " />
                                                                    <Run FontWeight="SemiBold" Text="{Binding EpisodesWatched}" />
                                                                    <Run Text=" / " />
                                                                    <Run Text="{Binding Details.NumEpisodes}" />
                                                                </TextBlock>

                                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                                    <Button
                                                                        Width="24"
                                                                        Height="24"
                                                                        Padding="5"
                                                                        Classes="Purple"
                                                                        Command="{Binding DecreaseEpisodeCount}">
                                                                        <TextBlock
                                                                            HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"
                                                                            Text="-" />
                                                                    </Button>
                                                                    <Button
                                                                        Width="24"
                                                                        Height="24"
                                                                        Padding="5"
                                                                        Classes="Purple"
                                                                        Command="{Binding IncreaseEpisodeCount}">
                                                                        <TextBlock
                                                                            HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"
                                                                            Text="+" />
                                                                    </Button>
                                                                </StackPanel>
                                                            </StackPanel>

                                                            <!--  Bottom Row: Progress Bar  -->
                                                            <ProgressBar
                                                                Grid.Row="1"
                                                                Height="8"
                                                                Margin="0,6,6,0"
                                                                Background="{StaticResource Background0}"
                                                                Foreground="{StaticResource Primary}"
                                                                Maximum="{Binding Details.NumEpisodes}"
                                                                Value="{Binding EpisodesWatched}" />
                                                        </Grid>
                                                    </StackPanel>

                                                    <ScrollViewer Margin="0,24,0,0" VerticalScrollBarVisibility="Auto">
                                                        <StackPanel>
                                                            <TextBlock
                                                                FontSize="20"
                                                                FontWeight="SemiBold"
                                                                Foreground="{StaticResource Primary}"
                                                                Text="Synopsis" />
                                                            <TextBlock
                                                                Margin="0,0,0,0"
                                                                Padding="0,10,0,0"
                                                                Foreground="{StaticResource White}"
                                                                LineHeight="1.5"
                                                                LineSpacing="15"
                                                                Text="{Binding Details.Synopsis}"
                                                                TextWrapping="Wrap" />
                                                        </StackPanel>
                                                    </ScrollViewer>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </Grid>

                                    <Grid
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        IsVisible="{Binding IsLoading}">
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <ProgressBar Width="300" IsIndeterminate="True" />
                                            <TextBlock
                                                Margin="0,10,0,0"
                                                HorizontalAlignment="Center"
                                                FontSize="16"
                                                Foreground="{StaticResource White}"
                                                Text="Loading details..." />
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>
                    </TabItem>

                    <!--  Torrents Tab  -->
                    <TabItem Header="Torrents">
                        <Grid Margin="0,16,0,0" Background="{StaticResource Background1}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!--  Search Controls  -->
                            <StackPanel
                                Grid.Row="0"
                                Margin="16,16,16,16"
                                Orientation="Horizontal"
                                Spacing="8">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Foreground="{StaticResource White}"
                                    Text="Episode:" />

                                <ComboBox
                                    Width="60"
                                    MinHeight="30"
                                    VerticalAlignment="Center"
                                    ItemsSource="{Binding WatchEpisodesOptions}"
                                    SelectedItem="{Binding NextEpisodeNumber, Mode=TwoWay}" />

                                <TextBox
                                    Width="300"
                                    MinHeight="30"
                                    VerticalAlignment="Center"
                                    Text="{Binding TorrentSearchTerms}"
                                    Watermark="Additional search terms (optional)" />

                                <Button
                                    MinHeight="30"
                                    VerticalAlignment="Center"
                                    Classes="Purple"
                                    Command="{Binding SearchTorrentsCommand}"
                                    IsEnabled="{Binding NextEpisodeNumber, Converter={StaticResource GreaterThanZeroConverter}}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PathIcon
                                            Width="16"
                                            Height="16"
                                            Data="{StaticResource search_glass}" />
                                        <TextBlock VerticalAlignment="Center" Text="Search" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <!--  Torrent Results  -->
                            <Grid Grid.Row="1" Margin="16,0,16,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <ListBox
                                    Grid.Row="0"
                                    Background="Transparent"
                                    ItemsSource="{Binding TorrentsList}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate DataType="models:NyaaTorrent">
                                            <Border
                                                Padding="12"
                                                Background="{StaticResource Background0}"
                                                BorderThickness="1"
                                                CornerRadius="4">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock
                                                        Grid.Column="0"
                                                        Foreground="{StaticResource White}"
                                                        Text="{Binding Title}"
                                                        TextWrapping="Wrap" />
                                                    <TextBlock
                                                        Grid.Column="1"
                                                        Margin="16,0"
                                                        HorizontalAlignment="Right"
                                                        Foreground="{StaticResource White}"
                                                        Text="{Binding Size}" />
                                                    <TextBlock
                                                        Grid.Column="2"
                                                        Margin="16,0"
                                                        HorizontalAlignment="Right"
                                                        Foreground="{Binding Seeders, Converter={StaticResource SeederColorConverter}}"
                                                        Text="{Binding Seeders}" />

                                                    <StackPanel
                                                        Grid.Column="3"
                                                        Margin="16,0,0,0"
                                                        Orientation="Horizontal"
                                                        Spacing="8">
                                                        <Button
                                                            Classes="Purple"
                                                            Command="{Binding #Root.((vm:AnimeDetailsViewModel)DataContext).DownloadTorrentCommand}"
                                                            CommandParameter="{Binding TorrentLink}"
                                                            Content="Download" />
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Grid>
                    </TabItem>

                    <!--  Watch Anime  -->
                    <TabItem Foreground="{StaticResource Complementary}" Header="Watch!">
                        <Grid Margin="0,16,0,0">
                            <views:WatchAnimeView Grid.Column="1" DataContext="{Binding WatchAnimeViewModel}" />
                        </Grid>
                    </TabItem>
                </TabControl>
            </Border>

            <!--  Empty state for when no anime is selected  -->
            <Border
                Grid.Column="2"
                Background="{StaticResource Background0}"
                IsVisible="{Binding SelectedAnime, Converter={x:Static ObjectConverters.IsNull}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="{StaticResource Primary}"
                        Text="No Anime Selected" />
                    <TextBlock
                        Margin="0,8,0,0"
                        HorizontalAlignment="Center"
                        Foreground="{StaticResource White}"
                        Text="Select an anime from your list to view details" />
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>