<UserControl
    x:Class="Aniki.Views.OnlineView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:Aniki.ViewModels;assembly=Aniki"
    x:DataType="vm:OnlineViewModel">
    
    <UserControl.Styles>
        <Style Selector="Button">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="#3E3E42"/>
        </Style>
        <Style Selector="Button:pressed">
            <Setter Property="Background" Value="#007ACC"/>
        </Style>
        <Style Selector="Button:disabled">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Cursor" Value="Arrow"/>
        </Style>
        
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>
        <Style Selector="TextBox:focus">
            <Setter Property="BorderBrush" Value="#007ACC"/>
        </Style>
        
        <Style Selector="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="4,2"/>
        </Style>
        <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#2D2D30"/>
        </Style>
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="#007ACC"/>
        </Style>
        
        <Style Selector="ComboBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>
    </UserControl.Styles>
    
    <Grid RowDefinitions="Auto,*" ColumnDefinitions="300,*" ColumnSpacing="20"> 
        <!-- Search Bar -->
        <Border
            Background="{StaticResource BackgroundGray}"
            CornerRadius="12"
            Padding="12,8"
            Margin="10,5"
            Cursor="Hand"
            Width="300">
            <Grid ColumnDefinitions="Auto,*">
                <PathIcon Grid.Column="0"
                          Data="M15.5 14h-.79l-.28-.27A6.471 6.471 0 0 0 16 9.5 6.5 6.5 0 1 0 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                          Width="16" Height="16"
                          Foreground="#666666"
                          Margin="0,0,10,0"/>
                <TextBox Grid.Column="1"
                         Text="{Binding SearchQuery, Mode=TwoWay}"
                         Watermark="Type to Search..."
                         Foreground="#999999"
                         Background="Transparent"
                         BorderThickness="0"
                         MinWidth="200"
                         VerticalContentAlignment="Center">
                    <TextBox.KeyBindings>
                        <KeyBinding Gesture="Enter" Command="{Binding SearchAnimeCommand}" />
                    </TextBox.KeyBindings>
                </TextBox>
            </Grid>
        </Border>
        
        <!-- Left Panel - Search Results -->
        <Border Grid.Column="0" 
                Grid.Row="1"
                Background="#1E1E1E"
                CornerRadius="8"
                BoxShadow="0 2 8 0 #20000000">
            <Grid RowDefinitions="Auto,*">
                <Border Grid.Row="0"
                        Background="#2D2D30"
                        CornerRadius="8,8,0,0"
                        Padding="16,12">
                    <TextBlock Text="Search Results" 
                               FontWeight="Bold" 
                               FontSize="15"
                               Foreground="White" />
                </Border>
                    
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              Padding="8">
                    <ListBox ItemsSource="{Binding AnimeResults}"
                             SelectedItem="{Binding SelectedAnime}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" 
                                               TextWrapping="NoWrap"
                                               TextTrimming="CharacterEllipsis"
                                               FontSize="13"
                                               Foreground="White" />
                                    <TextBlock Text="{Binding Episodes, StringFormat='Episodes: {0}'}" 
                                               FontSize="11"
                                               Foreground="{StaticResource Green}"
                                               Margin="0,2,0,0" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Grid>
        </Border>
        <Grid Grid.Column="1" Grid.Row="1" RowDefinitions="Auto,*">
            <!-- Episode Selection -->
            <Border Grid.Row="0" 
                    Background="#1E1E1E"
                    CornerRadius="8"
                    BoxShadow="0 2 8 0 #20000000"
                    Padding="20"
                    Margin="0,0,0,20"
                    IsVisible="{Binding Episodes.Count}">
                <StackPanel Spacing="16">
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Grid.Column="0"
                                   Text="Select Episode" 
                                   FontWeight="Bold"
                                   FontSize="15"
                                   Foreground="White"
                                   VerticalAlignment="Center" />
                        
                        <Border Grid.Column="1"
                                Background="#2D2D30"
                                CornerRadius="12"
                                Padding="12,6">
                            <TextBlock Text="{Binding WatchedEpisodesText}"
                                       FontSize="12"
                                       Foreground="#4EC9B0"
                                       FontWeight="SemiBold" />
                        </Border>
                    </Grid>
                    
                    <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="12">
                        <TextBlock Grid.Column="0"
                                   Text="Player:"
                                   VerticalAlignment="Center"
                                   Foreground="#A0A0A0"
                                   FontSize="13"
                                   FontWeight="SemiBold" />
                        
                        <ComboBox Grid.Column="1"
                                  ItemsSource="{Binding AvailablePlayers}"
                                  SelectedItem="{Binding SelectedPlayer}"
                                  MinWidth="150">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayName}"
                                               Foreground="White" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        
                        <Button Grid.Column="2"
                                Content="â–¶ Play" 
                                Command="{Binding PlayInBrowserCommand}"
                                IsEnabled="{Binding CanPlayVideo}"
                                MinWidth="120"
                                Background="#0E7A0D"
                                FontWeight="SemiBold">
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#10830F"/>
                                </Style>
                                <Style Selector="Button:pressed">
                                    <Setter Property="Background" Value="#0C6A0B"/>
                                </Style>
                            </Button.Styles>
                        </Button>
                        
                        <ProgressBar Grid.Column="3"
                                    IsIndeterminate="True"
                                    IsVisible="{Binding IsLoading}"
                                    Width="100"
                                    Height="4"
                                    VerticalAlignment="Center"
                                    Foreground="#007ACC" />
                    </Grid>
                    
                    <Border Background="#2D2D30"
                            CornerRadius="6"
                            Padding="12,8"
                            Margin="0,4,0,0">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="Episode:"
                                       VerticalAlignment="Center"
                                       Foreground="#A0A0A0"
                                       FontSize="13"
                                       FontWeight="SemiBold" />
                            <ComboBox ItemsSource="{Binding Episodes}"
                                      SelectedItem="{Binding SelectedEpisode}"
                                      MinWidth="200">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Number, StringFormat='Episode {0}'}"
                                                   Foreground="White" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Video Placeholder -->
            <Border Grid.Row="1" 
                    Background="#1E1E1E"
                    CornerRadius="8"
                    BoxShadow="0 2 8 0 #20000000"
                    Padding="40">
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Spacing="20">
                    <Path Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 14.5v-9l6 4.5-6 4.5z"
                          Fill="#007ACC"
                          Stretch="Uniform"
                          Width="80"
                          Height="80"
                          Opacity="0.6" />
                    
                    <TextBlock Text="Select an episode to watch"
                               FontSize="16"
                               Foreground="#808080"
                               TextAlignment="Center"
                               IsVisible="{Binding !Episodes.Count}" />
                    
                    <TextBlock Text="Click 'Play' to watch"
                               FontSize="16"
                               Foreground="#808080"
                               TextAlignment="Center"
                               IsVisible="{Binding Episodes.Count}" />
                    
                    <TextBlock Text="Video will open in your default video player"
                               FontSize="13"
                               Foreground="#606060"
                               TextAlignment="Center"
                               FontStyle="Italic"
                               IsVisible="{Binding Episodes.Count}" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>