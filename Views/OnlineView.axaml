<UserControl
    x:Class="Aniki.Views.OnlineView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:Aniki.ViewModels;assembly=Aniki"
    xmlns:avalonia="clr-namespace:LibVLCSharp.Avalonia;assembly=LibVLCSharp.Avalonia"
    x:DataType="vm:OnlineViewModel">
    <Grid RowDefinitions="Auto,*" Margin="10">
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="0,0,0,10">
            <TextBox Text="{Binding SearchQuery}" 
                     Width="300" 
                     Watermark="Search anime on AllManga..." />
            <Button Content="Search" 
                    Command="{Binding SearchAnimeCommand}"
                    IsEnabled="{Binding !IsLoading}" />
        </StackPanel>

        <Grid Grid.Row="1" ColumnDefinitions="250,*">
            <Border Grid.Column="0" 
                    BorderBrush="Gray" 
                    BorderThickness="1" 
                    Margin="0,0,10,0"
                    CornerRadius="4">
                <StackPanel>
                    <TextBlock Text="Anime Results" 
                               FontWeight="Bold" 
                               FontSize="14"
                               Margin="10,10,10,5" />
                    <Separator Margin="10,0,10,5" />
                    <ListBox ItemsSource="{Binding AnimeResults}"
                             SelectedItem="{Binding SelectedAnime}"
                             BorderThickness="0"
                             Background="Transparent">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Title}" 
                                          TextWrapping="Wrap"
                                          Margin="5" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>

            <Grid Grid.Column="1" RowDefinitions="Auto,*,Auto">
                
                <Border Grid.Row="0" 
                        BorderBrush="Gray" 
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="10"
                        Margin="0,0,0,10"
                        IsVisible="{Binding Episodes.Count}">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="Episode:" 
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold" />
                        <ComboBox ItemsSource="{Binding Episodes}"
                                  SelectedItem="{Binding SelectedEpisode}"
                                  MinWidth="200">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Number, StringFormat='Episode {0}'}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <TextBlock Text="{Binding StatusText}" 
                                   VerticalAlignment="Center"
                                   Margin="20,0,0,0" />
                        <TextBlock Text="Loading..." 
                                   IsVisible="{Binding IsLoading}"
                                   VerticalAlignment="Center"
                                   FontStyle="Italic" />
                    </StackPanel>
                </Border>

                <Border Grid.Row="1" 
                        BorderBrush="Gray" 
                        BorderThickness="1"
                        CornerRadius="4"
                        ClipToBounds="True"
                        Background="Black">
                    <Panel x:Name="VideoContainer" Background="Transparent">
                        <avalonia:VideoView MediaPlayer="{Binding MediaPlayer}">
                            <Border x:Name="VideoControlsOverlay"
                                VerticalAlignment="Bottom"
                                Background="#CC000000"
                                Padding="15,10"
                                IsVisible="True">
                                <StackPanel Spacing="10">
                                    <StackPanel Orientation="Horizontal" 
                                               HorizontalAlignment="Center"
                                               Spacing="10">
                                        <Button Content="▶" 
                                                Command="{Binding PlayCommand}"
                                                Width="40"
                                                Height="40"
                                                FontSize="16"
                                                ToolTip.Tip="Play" />
                                        <Button Content="⏸" 
                                                Command="{Binding PauseCommand}"
                                                Width="40"
                                                Height="40"
                                                FontSize="16"
                                                ToolTip.Tip="Pause" />
                                        <Button Content="⏹" 
                                                Command="{Binding StopCommand}"
                                                Width="40"
                                                Height="40"
                                                FontSize="16"
                                                ToolTip.Tip="Stop" />
                                        <Button Content="⛶" 
                                                Command="{Binding ToggleFullscreenCommand}"
                                                Width="40"
                                                Height="40"
                                                FontSize="16"
                                                ToolTip.Tip="Fullscreen"
                                                HorizontalAlignment="Right"
                                                Margin="20,0,0,0" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </avalonia:VideoView>
                    </Panel>
                </Border>

                <Border Grid.Row="2"
                        BorderBrush="Gray"
                        BorderThickness="0,1,0,0"
                        Padding="10,5"
                        Margin="0,10,0,0"
                        IsVisible="{Binding !Episodes.Count}">
                    <TextBlock Text="{Binding StatusText}"
                               VerticalAlignment="Center" />
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>