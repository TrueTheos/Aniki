<UserControl
    x:Class="Aniki.Views.OnlineView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:Aniki.ViewModels;assembly=Aniki"
    xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
    x:DataType="vm:OnlineViewModel">
    
    <UserControl.Styles>
        <Style Selector="Button">
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button:disabled">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Cursor" Value="Arrow"/>
        </Style>
        
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>
        <Style Selector="TextBox:focus">
            <Setter Property="BorderBrush" Value="#007ACC"/>
        </Style>
        
        <Style Selector="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <Style Selector="Ellipse.PlayButton:pointerover">
            <Setter Property="Fill" Value="{StaticResource DarkerRedColor}"/>
        </Style>
        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="4,2"/>
        </Style>
        <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#2D2D30"/>
        </Style>
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="#007ACC"/>
        </Style>
        
        <Style Selector="ComboBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>
    </UserControl.Styles>
    
    <Grid RowDefinitions="Auto,*" ColumnDefinitions="300,*" ColumnSpacing="20"> 
        <!-- Search Bar -->
        <Border
            Background="{StaticResource BackgroundGray}"
            CornerRadius="12"
            Padding="12,8"
            Margin="10,5"
            Cursor="Hand"
            Width="300">
            <Grid ColumnDefinitions="Auto,*">
                <PathIcon Grid.Column="0"
                          Data="M15.5 14h-.79l-.28-.27A6.471 6.471 0 0 0 16 9.5 6.5 6.5 0 1 0 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                          Width="16" Height="16"
                          Foreground="#666666"
                          Margin="0,0,10,0"/>
                <TextBox Grid.Column="1"
                         Text="{Binding SearchQuery, Mode=TwoWay}"
                         Watermark="Type to Search..."
                         Foreground="#999999"
                         Background="Transparent"
                         BorderThickness="0"
                         MinWidth="200"
                         VerticalContentAlignment="Center">
                    <TextBox.KeyBindings>
                        <KeyBinding Gesture="Enter" Command="{Binding SearchAnimeCommand}" />
                    </TextBox.KeyBindings>
                </TextBox>
            </Grid>
        </Border>
        
        <!-- Left Panel - Search Results -->
        <Border Grid.Column="0" 
                Grid.Row="1"
                Background="#1E1E1E"
                CornerRadius="8"
                BoxShadow="0 2 8 0 #20000000">
            <Grid RowDefinitions="Auto,*">
                <Border Grid.Row="0"
                        Background="#2D2D30"
                        CornerRadius="8,8,0,0"
                        Padding="16,12">
                    <TextBlock Text="Search Results" 
                               FontWeight="Bold" 
                               FontSize="15"
                               Foreground="White" />
                </Border>
                    
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              Padding="8,8,8,-20">
                    <ListBox ItemsSource="{Binding AnimeResults}"
                             SelectedItem="{Binding SelectedAnime}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" 
                                               TextWrapping="NoWrap"
                                               TextTrimming="CharacterEllipsis"
                                               FontSize="13"
                                               Foreground="White" />
                                    <TextBlock Text="{Binding Episodes, StringFormat='Episodes: {0}'}" 
                                               FontSize="11"
                                               Foreground="{StaticResource Green}"
                                               Margin="0,2,0,0" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Grid>
        </Border>
        <Grid Grid.Column="1" Grid.Row="1" RowDefinitions="Auto,*" Margin="0,0,20,0">
            <!-- Episode Selection -->
            <Border Grid.Row="0" 
                Background="#1E1E1E"
                CornerRadius="8"
                BoxShadow="0 2 8 0 #20000000"
                Padding="20"
                Margin="0,0,0,20"
                IsVisible="{Binding Episodes.Count}">
                <StackPanel Spacing="10">
                    
                    <TextBlock Text="{Binding SelectedAnime.Title}" 
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="White"
                               TextWrapping="Wrap"/>
                    
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Background="{StaticResource RedColor}" 
                                BorderThickness="0"
                                CornerRadius="6"
                                Padding="12,4"
                                ToolTip.Tip="Go to website"
                                Command="{Binding GoToAnimeDetailsCommand}"
                                IsEnabled="{Binding SelectedAnime.MalId, Converter={x:Static ObjectConverters.IsNotNull}}">
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <Image Source="{SvgImage /Resources/Icons/globe_icon.svg}" Width="22" Height="22"/>
                                <TextBlock Text="Details" 
                                           FontSize="15"
                                           FontWeight="SemiBold"
                                           Foreground="White"/>
                            </StackPanel>
                        </Button>
                        <Border Background="#2D2D30"
                                CornerRadius="12"
                                Padding="12,4"
                                HorizontalAlignment="Left">
                            <TextBlock Text="{Binding WatchedEpisodesText}"
                                       FontSize="11"
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource Green}"
                                       FontWeight="SemiBold" />
                        </Border>
                    </StackPanel>

                    <Grid ColumnDefinitions="Auto,Auto, 15, Auto,Auto, 10, Auto, *, Auto" 
                          Margin="0,8,0,0">
                        
                        <TextBlock Grid.Column="0"
                                   Text="Player:"
                                   VerticalAlignment="Center"
                                   Foreground="#A0A0A0"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Margin="0,0,8,0"/>
                        
                        <ComboBox Grid.Column="1"
                                  ItemsSource="{Binding AvailablePlayers}"
                                  SelectedItem="{Binding SelectedPlayer}"
                                  MinWidth="140">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayName}" Foreground="White" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Grid.Column="3"
                                   Text="Episode:"
                                   VerticalAlignment="Center"
                                   Foreground="#A0A0A0"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Margin="0,0,8,0"/>
                        
                        <ComboBox Grid.Column="4"
                                  ItemsSource="{Binding Episodes}"
                                  SelectedItem="{Binding SelectedEpisode}"
                                  MinWidth="100">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Number, StringFormat='Episode {0}'}" Foreground="White" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <ProgressBar Grid.Column="8"
                                     IsIndeterminate="True"
                                     IsVisible="{Binding IsLoading}"
                                     Width="100"
                                     Height="4"
                                     VerticalAlignment="Center"
                                     Foreground="#007ACC" />
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Video Placeholder -->
            <Grid Grid.Row="1">
                <Grid ClipToBounds="True" IsVisible="{Binding SelectedEpisode, Converter={x:Static ObjectConverters.IsNotNull}}">
                    <Image asyncImageLoader:ImageLoader.Source="{Binding AnimeImageUrl}"
                           Stretch="UniformToFill">
                        <Image.Effect>
                            <BlurEffect Radius="20"/>
                        </Image.Effect>
                    </Image>
                            
                    <Border>
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0%,50%" EndPoint="100%,50%">
                                <GradientStop Color="#DD000000" Offset="0"/>
                                <GradientStop Color="#00000000" Offset="0.5"/>
                                <GradientStop Color="#DD000000" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                            
                    <Border>
                        <Border.Background>
                            <LinearGradientBrush StartPoint="50%,0%" EndPoint="50%,100%">
                                <GradientStop Color="#00000000" Offset="0"/>
                                <GradientStop Color="#DD000000" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    
                    <Button Command="{Binding PlayInBrowserCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                        <Grid>
                            <Ellipse Width="80" Height="80"
                                     Classes="PlayButton"
                                     Fill="{StaticResource RedColor}"
                                     Opacity="0.95"/>
                            <PathIcon Data="M8 5v14l11-7z"
                                      Width="28" Height="28"
                                      Foreground="White"
                                      Margin="6,0,0,0"/>
                        </Grid>
                    </Button>
                </Grid>
                <Grid ClipToBounds="True" IsVisible="{Binding SelectedEpisode, Converter={x:Static ObjectConverters.IsNull}}">
                    <StackPanel VerticalAlignment="Center" 
                                HorizontalAlignment="Center" 
                                Spacing="20">
                        <Image Source="/Resources/nothingtoseehere_transparent_small.png" 
                               Width="300" 
                               RenderOptions.BitmapInterpolationMode="HighQuality"/>
                        <TextBlock Text="{Binding SelectionStatusMessage}" 
                                   IsVisible="{Binding ShowSelectionStatus}"
                                   Foreground="#888888" 
                                   FontSize="22" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>