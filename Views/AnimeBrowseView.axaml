<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Aniki.ViewModels"
             xmlns:local="clr-namespace:Aniki.Views"
             xmlns:models="clr-namespace:Aniki.Models"
             xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
             mc:Ignorable="d" d:DesignWidth="1400" d:DesignHeight="900"
             x:Class="Aniki.Views.AnimeBrowseView"
             x:DataType="vm:AnimeBrowseViewModel">
    
    <Grid Margin="0,0,0,0" Background="{StaticResource BackgroundBlack}" RowDefinitions="*">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <!-- Main Content Area -->
        <ScrollViewer Grid.Column="0" 
                     Grid.Row="0"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Disabled"
                     Background="{StaticResource BackgroundBlack}">
            <StackPanel Spacing="40" Margin="50,20" Background="{StaticResource BackgroundBlack}">
                
                <!-- Loading Indicator -->
                <Border Height="4"
                        Background="Transparent"
                        IsVisible="{Binding IsLoading}">
                    <ProgressBar Height="4"
                                Background="Transparent"
                                Foreground="{StaticResource RedColor}"
                                IsIndeterminate="True" />
                </Border>

                <!-- Header with Search -->
                <Grid ColumnDefinitions="Auto,*" 
                      Margin="0,10,0,0"
                      IsVisible="{Binding !IsLoading}">
                    
                    <!-- Manga/Anime Tabs -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="30">
                        <StackPanel>
                            <Button Content="Anime" 
                                    Foreground="White"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="15"
                                    FontWeight="Medium"/>
                            <Border Height="2" Background="{StaticResource RedColor}" Margin="0,8,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- Main View Content -->
                <StackPanel Spacing="50" IsVisible="{Binding ViewMode, Converter={StaticResource EnumMatchConverter}, ConverterParameter=Main}">
                    
                    <!-- Hero Section -->
                    <Border CornerRadius="16" 
                            Height="450"
                            Background="{StaticResource BackgroundGray}"
                            ClipToBounds="True"
                            IsVisible="{Binding HeroAnime, Converter={x:Static ObjectConverters.IsNotNull}}">
                        <Grid>
                            <!-- Background Video Thumbnail -->
                            <Image asyncImageLoader:ImageLoader.Source="{Binding HeroAnime.VideoThumbnail}"
                                   Stretch="UniformToFill">
                                <Image.Effect>
                                    <BlurEffect Radius="20"/>
                                </Image.Effect>
                            </Image>
                            
                            <Border>
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0%,50%" EndPoint="100%,50%">
                                        <GradientStop Color="#DD000000" Offset="0"/>
                                        <GradientStop Color="#00000000" Offset="0.5"/>
                                        <GradientStop Color="#DD000000" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            
                            <Border>
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="50%,0%" EndPoint="50%,100%">
                                        <GradientStop Color="#00000000" Offset="0"/>
                                        <GradientStop Color="#DD000000" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            
                            <!-- Content Overlay -->
                            <Grid Margin="50,0,0,50" VerticalAlignment="Bottom">
                                <StackPanel Spacing="15" MaxWidth="600" HorizontalAlignment="Left">
                                    
                                    <!-- Title Section -->
                                    <TextBlock Text="{Binding HeroAnime.Title}"
                                              FontSize="48"
                                              FontWeight="Bold"
                                              Foreground="White"
                                              TextWrapping="Wrap"
                                              MaxLines="2"
                                              TextTrimming="CharacterEllipsis"/>
                                    
                                    <!-- Tags -->
                                    <StackPanel Orientation="Horizontal" Spacing="15">
                                        <Border Background="#2A2A2A" 
                                                CornerRadius="12"
                                                Padding="14,6">
                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                <TextBlock Text="★" Foreground="{StaticResource RedColor}" FontSize="13"/>
                                                <TextBlock Text="{Binding HeroAnime.Score}" Foreground="White" FontSize="13"/>
                                            </StackPanel>
                                        </Border>
                                        <Border Background="#2A2A2A" 
                                                CornerRadius="12"
                                                Padding="14,6"
                                                IsVisible="{Binding HeroAnime.Status, Converter={StaticResource EnumMatchConverter}, ConverterParameter=watching}">
                                            <TextBlock Text="Watching" Foreground="#4CAF50" FontSize="13"/>
                                        </Border>
                                    </StackPanel>
                                    
                                    <!-- Description -->
                                    <TextBlock Text="{Binding HeroAnime.Synopsis}"
                                              Foreground="#CCCCCC"
                                              TextWrapping="Wrap"
                                              FontSize="14"
                                              LineHeight="22"
                                              MaxLines="3"
                                              TextTrimming="CharacterEllipsis"
                                              MaxWidth="550"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Navigation Arrows - Top Left -->
                            <StackPanel Orientation="Horizontal" 
                                       Spacing="10" 
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       Margin="20,20,0,0">
                                <Button 
                                        Command="{Binding PreviousHeroCommand}"
                                        Background="#00000000"
                                        Foreground="White"
                                        Width="40" Height="40"
                                        CornerRadius="20"
                                        BorderThickness="0"
                                        Opacity="0.9">
                                    <Image Source="{SvgImage /Resources/Icons/chevronLeft_icon.svg}" Width="20" Height="20" />
                                </Button>
                                
                                <Button
                                        Command="{Binding NextHeroCommand}"
                                        Background="#00000000"
                                        Foreground="White"
                                        Width="40" Height="40"
                                        CornerRadius="20"
                                        BorderThickness="0"
                                        Opacity="0.9">
                                    <Image Source="{SvgImage /Resources/Icons/chevronRight_icon.svg}" Width="20" Height="20" />
                                </Button>
                            </StackPanel>
                            
                            <!-- Play Button -->
                            <Button Command="{Binding PlayHeroVideoCommand}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                <Grid>
                                    <Ellipse Width="80" Height="80"
                                            Fill="{StaticResource RedColor}"
                                            Opacity="0.95"/>
                                    <PathIcon Data="M8 5v14l11-7z"
                                             Width="28" Height="28"
                                             Foreground="White"
                                             Margin="6,0,0,0"/>
                                </Grid>
                            </Button>
                            
                            <!-- Carousel Indicators -->
                            <StackPanel Orientation="Horizontal" 
                                       Spacing="8"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Bottom"
                                       Margin="0,0,0,20">
                                <ItemsControl ItemsSource="{Binding HeroAnimeList}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="8"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Width="30" Height="3"
                                                   CornerRadius="2"
                                                   Background="{Binding IsCurrentHero, Converter={StaticResource BoolToColorConverter}, ConverterParameter=#FFFFFF:#666666}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Popular This Season -->
                    <StackPanel Spacing="25" IsVisible="{Binding PopularThisSeason.Count}">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0"
                                      Text="Popular This Season"
                                      FontSize="26"
                                      FontWeight="Bold"
                                      Foreground="White"/>
                        </Grid>
                        
                        <Grid>
                            <!-- Left Navigation Arrow -->
                            <Button Background="#00000000"
                                    Click="ScrollLeft"
                                    CommandParameter="{Binding #PopularThisSeasonScroller}"
                                    Foreground="White"
                                    Width="30" Height="30"
                                    CornerRadius="25"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Margin="-40,0,0,30"
                                    ZIndex="10"
                                    BorderThickness="0">
                                <Image Source="{SvgImage /Resources/Icons/chevronLeft_icon.svg}" Width="30" Height="30" />
                            </Button>
                            
                            <!-- Anime Cards -->
                            <ScrollViewer Name="PopularThisSeasonScroller"
                                          HorizontalScrollBarVisibility="Hidden"
                                         VerticalScrollBarVisibility="Disabled">
                                <ItemsControl ItemsSource="{Binding PopularThisSeason}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="20"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="models:AnimeCardData">
                                            <local:AnimeCard/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                            
                            <!-- Right Navigation Arrow -->
                            <Button Background="#00000000"
                                    Click="ScrollRight"
                                    CommandParameter="{Binding #PopularThisSeasonScroller}"
                                    Foreground="White"
                                    Width="30" Height="30"
                                    CornerRadius="25"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Margin="0,0,-40,30"
                                    ZIndex="10"
                                    BorderThickness="0">
                                <Image Source="{SvgImage /Resources/Icons/chevronRight_icon.svg}" Width="30" Height="30" />
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- Popular Upcoming -->
                    <StackPanel Spacing="25" IsVisible="{Binding PopularUpcoming.Count}">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0"
                                      Text="Popular Upcoming"
                                      FontSize="26"
                                      FontWeight="Bold"
                                      Foreground="White"/>
                        </Grid>
                        
                        <Grid>
                            <Button Background="#00000000"
                                    Click="ScrollLeft"
                                    CommandParameter="{Binding #PopularUpcomingScroller}"
                                    Foreground="White"
                                    Width="30" Height="30"
                                    CornerRadius="25"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Margin="-40,0,0,30"
                                    ZIndex="10"
                                    BorderThickness="0">
                                <Image Source="{SvgImage /Resources/Icons/chevronLeft_icon.svg}" Width="30" Height="30" />
                            </Button>
                            
                            <ScrollViewer Name="PopularUpcomingScroller" 
                                          HorizontalScrollBarVisibility="Hidden"
                                         VerticalScrollBarVisibility="Disabled">
                                <ItemsControl ItemsSource="{Binding PopularUpcoming}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="20"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="models:AnimeCardData">
                                            <local:AnimeCard/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                            
                            <Button Background="#00000000"
                                    Click="ScrollRight"
                                    CommandParameter="{Binding #PopularUpcomingScroller}"
                                    Foreground="White"
                                    Width="30" Height="30"
                                    CornerRadius="25"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Margin="0,0,-40,30"
                                    ZIndex="10"
                                    BorderThickness="0">
                                <Image Source="{SvgImage /Resources/Icons/chevronRight_icon.svg}" Width="30" Height="30" />
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- Trending All Time -->
                    <StackPanel Spacing="25" IsVisible="{Binding TrendingAllTime.Count}">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0"
                                      Text="Trending All Time"
                                      FontSize="26"
                                      FontWeight="Bold"
                                      Foreground="White"/>
                        </Grid>
                        
                        <Grid>
                            <Button Background="#00000000"
                                    Click="ScrollLeft"
                                    CommandParameter="{Binding #TrendingAllTimeScroller}"
                                    Foreground="White"
                                    Width="30" Height="30"
                                    CornerRadius="25"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Margin="-40,0,0,30"
                                    ZIndex="10"
                                    BorderThickness="0">
                                <Image Source="{SvgImage /Resources/Icons/chevronLeft_icon.svg}" Width="30" Height="30" />
                            </Button>
                            
                            <ScrollViewer Name="TrendingAllTimeScroller" 
                                          HorizontalScrollBarVisibility="Hidden"
                                         VerticalScrollBarVisibility="Disabled">
                                <ItemsControl ItemsSource="{Binding TrendingAllTime}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="20"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="models:AnimeCardData">
                                            <local:AnimeCard/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                            
                            <Button Background="#00000000" 
                                    Click="ScrollRight"
                                    CommandParameter="{Binding #TrendingAllTimeScroller}"
                                    Foreground="White"
                                    Width="50" Height="50"
                                    CornerRadius="25"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Margin="0,0,-40,0"
                                    ZIndex="10"
                                    BorderThickness="0"
                                    Opacity="0.9">
                                <Image Source="{SvgImage /Resources/Icons/chevronRight_icon.svg}" Width="20" Height="20" />
                            </Button>
                        </Grid>
                    </StackPanel>

                </StackPanel>

                <!-- Search Results View -->
                <Grid RowDefinitions="Auto,Auto,Auto" IsVisible="{Binding ViewMode, Converter={StaticResource EnumMatchConverter}, ConverterParameter=Search}">
                    
                    <!-- Back Button -->
                    <Button Grid.Row="0" Content="← Back to Browse"
                            Command="{Binding GoBackCommand}"
                            Background="Transparent"
                            Foreground="#999999"
                            BorderThickness="0"
                            HorizontalAlignment="Left"
                            FontSize="15"/>
                    
                    <!-- Pagination Top -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" 
                               HorizontalAlignment="Center"
                               Spacing="16">
                        <Button 
                            Command="{Binding PreviousPageCommand}"
                            Background="#00000000"
                            Foreground="White"
                            Width="40" Height="40"
                            CornerRadius="20"
                            BorderThickness="0"
                            Opacity="0.9">
                            <Image Source="{SvgImage /Resources/Icons/chevronLeft_icon.svg}" Width="20" Height="20" />
                        </Button>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
                            <TextBlock Text="{Binding CurrentPage}"
                                      FontSize="16"
                                      Foreground="White"
                                      FontWeight="Medium"/>
                            <TextBlock Text="/"
                                      FontSize="16"
                                      Foreground="#666666"/>
                            <TextBlock Text="{Binding TotalPages}"
                                      FontSize="16"
                                      Foreground="#666666"/>
                        </StackPanel>
                        <Button 
                            Command="{Binding NextPageCommand}"
                            Background="#00000000"
                            Foreground="White"
                            Width="40" Height="40"
                            CornerRadius="20"
                            BorderThickness="0"
                            Opacity="0.9">
                            <Image Source="{SvgImage /Resources/Icons/chevronRight_icon.svg}" Width="20" Height="20" />
                        </Button>
                    </StackPanel>

                    <!-- Search Results Grid -->
                    <ItemsControl Grid.Row="1" ItemsSource="{Binding SearchResults}" HorizontalAlignment="Center">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="models:AnimeCardData">
                                <local:AnimeCard Margin="10"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Pagination Bottom -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" 
                               HorizontalAlignment="Center"
                               Spacing="16"
                               Margin="0,20,0,0">
                        <Button 
                            Command="{Binding PreviousPageCommand}"
                            Background="#00000000"
                            Foreground="White"
                            Width="40" Height="40"
                            CornerRadius="20"
                            BorderThickness="0"
                            Opacity="0.9">
                            <Image Source="{SvgImage /Resources/Icons/chevronLeft_icon.svg}" Width="20" Height="20" />
                        </Button>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
                            <TextBlock Text="{Binding CurrentPage}"
                                      FontSize="16"
                                      Foreground="White"
                                      FontWeight="Medium"/>
                            <TextBlock Text="/"
                                      FontSize="16"
                                      Foreground="#666666"/>
                            <TextBlock Text="{Binding TotalPages}"
                                      FontSize="16"
                                      Foreground="#666666"/>
                        </StackPanel>
                        <Button 
                            Command="{Binding NextPageCommand}"
                            Background="#00000000"
                            Foreground="White"
                            Width="40" Height="40"
                            CornerRadius="20"
                            BorderThickness="0"
                            Opacity="0.9">
                            <Image Source="{SvgImage /Resources/Icons/chevronRight_icon.svg}" Width="20" Height="20" />
                        </Button>
                    </StackPanel>

                </Grid>

            </StackPanel>
        </ScrollViewer>

        <!-- Right Sidebar - Only visible in Main view -->
        <Border Grid.Column="1" 
                Grid.Row="0"
                Width="320"
                Background="#0F0F0F" 
                BorderBrush="{StaticResource Border}" 
                BorderThickness="1,0,0,0"
                Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                         AllowAutoHide="True"
                         Margin="0,20,0,0">
                <StackPanel Spacing="35">
                    
                    <!-- Search Box -->
                    <Border
                            Background="{StaticResource BackgroundGray}"
                            CornerRadius="12"
                            Padding="12,8"
                            Margin="10,5"
                            Cursor="Hand">
                        <Grid ColumnDefinitions="Auto,*">
                            <PathIcon Grid.Column="0"
                                      Data="M15.5 14h-.79l-.28-.27A6.471 6.471 0 0 0 16 9.5 6.5 6.5 0 1 0 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                      Width="16" Height="16"
                                      Foreground="#666666"
                                      Margin="0,0,10,0"/>
                            <TextBox Grid.Column="1"
                                     Text="{Binding SearchQuery, Mode=TwoWay}"
                                     Watermark="Type to Search..."
                                     Foreground="#999999"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     MinWidth="200"
                                     VerticalContentAlignment="Center">
                                <TextBox.KeyBindings>
                                    <KeyBinding Gesture="Enter" Command="{Binding PerformSearchCommand}" />
                                </TextBox.KeyBindings>
                            </TextBox>
                        </Grid>
                    </Border>
                    
                    <!-- Airing Today Sidebar -->
                    <StackPanel Spacing="15">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0"
                                      Text="Airing Today"
                                      FontSize="18"
                                      FontWeight="Bold"
                                      Foreground="White"/>
                        </Grid>
                        
                        <ItemsControl ItemsSource="{Binding AiringToday}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="models:AnimeCardData">
                                    <Border Background="{StaticResource BackgroundGray}" 
                                            CornerRadius="12" 
                                            Padding="12"
                                            Margin="0,0,0,10"
                                            Cursor="Hand"
                                            Tapped="OnDoubleTapped">
                                        <Grid ColumnDefinitions="60,*">
                                            <Border Grid.Column="0" 
                                                    Width="60" Height="85" 
                                                    CornerRadius="8" 
                                                    Background="#2A2A2A"
                                                    ClipToBounds="True">
                                                <Image asyncImageLoader:ImageLoader.Source="{Binding ImageUrl}" 
                                                       Stretch="UniformToFill"/>
                                            </Border>
                                            <StackPanel Grid.Column="1" 
                                                       Margin="12,0,0,0" 
                                                       VerticalAlignment="Center"
                                                       Spacing="6">
                                                <TextBlock Text="{Binding Title}"
                                                          FontWeight="SemiBold"
                                                          Foreground="White"
                                                          FontSize="14"
                                                          TextTrimming="CharacterEllipsis"
                                                          MaxLines="2"
                                                          TextWrapping="Wrap"/>
                                                <StackPanel Orientation="Horizontal" Spacing="4">
                                                    <TextBlock Text="★"
                                                              Foreground="{StaticResource RedColor}"
                                                              FontSize="12"
                                                              VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding Score}"
                                                              Foreground="{StaticResource RedColor}"
                                                              FontSize="11"
                                                              VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>