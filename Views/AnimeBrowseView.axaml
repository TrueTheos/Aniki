<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Aniki.ViewModels"
             xmlns:local="clr-namespace:Aniki.Views"
             xmlns:models="clr-namespace:Aniki.Models"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="Aniki.Views.AnimeBrowseView"
             x:DataType="vm:AnimeBrowseViewModel">
    
    <Grid RowDefinitions="Auto,*">
        <Grid Grid.Row="0"
              ColumnDefinitions="Auto,*,Auto"
              Background="{StaticResource Background0}">

            <StackPanel Orientation="Horizontal" IsVisible="{Binding !IsLoading}" Margin="20,10,0,0">
                <Grid>
                    <Grid HorizontalAlignment="Stretch">
                        <TextBox
                            Name="SearchBox"
                            MinWidth="150"
                            VerticalContentAlignment="Center"
                            Background="#FF3E3E3E"
                            BorderBrush="#FF505050"
                            BorderThickness="1"
                            CornerRadius="7"
                            Foreground="#FFE0E0E0"
                            Text="{Binding SearchQuery, Mode=TwoWay}"
                            Watermark="Search" >
                            <TextBox.KeyBindings>
                                <KeyBinding Gesture="Enter" Command="{Binding PerformSearchCommand}" />
                            </TextBox.KeyBindings>
                        </TextBox>

                        <Button
                            Margin="0,0,8,0"
                            Padding="0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            Command="{Binding PerformSearchCommand}"
                            Cursor="Hand">
                            <Image Source="{SvgImage /Resources/Icons/search_icon.svg}" Width="16" Height="16"/>
                            <Button.Styles>
                                <Style Selector="Button:pointerover PathIcon">
                                    <Setter Property="Foreground" Value="#FFD0D0D0" />
                                </Style>
                                <Style Selector="Button:pressed PathIcon">
                                    <Setter Property="Foreground" Value="White" />
                                </Style>
                            </Button.Styles>
                        </Button>
                    </Grid>
                </Grid>
                
                <Button
                    Classes="nav-button"
                    Command="{Binding GoBackCommand}"
                    IsVisible="{Binding ViewMode, Converter={StaticResource EnumMatchConverter}, ConverterParameter=Search}"
                    Cursor="Hand" >
                    <Image Source="{SvgImage /Resources/Icons/chevronLeft_icon.svg}" Width="16" Height="16"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Content Area -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Disabled">
            <StackPanel Spacing="40" Margin="20" >
                
                <Border
                    Height="4"
                    Background="{StaticResource Background0}"
                    DockPanel.Dock="Top"
                    IsVisible="{Binding IsLoading}">
                    <ProgressBar
                        Height="4"
                        Background="Transparent"
                        Foreground="{StaticResource Primary}"
                        IsIndeterminate="True" />
                </Border>

                <!-- Main View -->
                <StackPanel Spacing="40">
                    <StackPanel.IsVisible>
                        <MultiBinding Converter="{x:Static BoolConverters.And}">
                            <Binding Path="ViewMode" 
                                     Converter="{StaticResource EnumMatchConverter}" 
                                     ConverterParameter="Main"/>
                            <Binding Path="!IsLoading"/>
                        </MultiBinding>
                    </StackPanel.IsVisible>
                    <!-- Popular This Season -->
                    <ItemsControl ItemsSource="{Binding PopularThisSeason}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="16"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="models:AnimeCardData">
                                <local:AnimeCard Margin="10"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- For Popular Upcoming -->
                    <ItemsControl ItemsSource="{Binding PopularUpcoming}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="16"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="models:AnimeCardData">
                                <local:AnimeCard Margin="10"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- For Trending All Time -->
                    <ItemsControl ItemsSource="{Binding TrendingAllTime}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="16"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="models:AnimeCardData">
                                <local:AnimeCard Margin="10"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </StackPanel>

                <!-- Search Results View -->
                <StackPanel Spacing="20">
                    <StackPanel.IsVisible>
                        <MultiBinding Converter="{x:Static BoolConverters.And}">
                            <Binding Path="ViewMode" 
                                     Converter="{StaticResource EnumMatchConverter}" 
                                     ConverterParameter="Search"/>
                            <Binding Path="!IsLoading"/>
                        </MultiBinding>
                    </StackPanel.IsVisible>
                    <!-- Pagination Controls Top -->
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center"
                               Spacing="16">
                        <Button Content="Previous"
                               Command="{Binding PreviousPageCommand}"
                               IsEnabled="{Binding CanGoPrevious}"
                               Padding="16,8"
                               Background="#3A3A3A"/>
                        <TextBlock Text="{Binding CurrentPage}"
                                  FontSize="16"
                                  VerticalAlignment="Center"
                                  Margin="8,0"/>
                        <TextBlock Text="/"
                                  FontSize="16"
                                  VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding TotalPages}"
                                  FontSize="16"
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0"/>
                        <Button Content="Next"
                               Command="{Binding NextPageCommand}"
                               IsEnabled="{Binding CanGoNext}"
                               Padding="16,8"
                               Background="#3A3A3A"/>
                    </StackPanel>

                    <!-- Search Results Grid -->
                    <ItemsControl ItemsSource="{Binding SearchResults}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" 
                                          HorizontalAlignment="Center"
                                          ItemWidth="180"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <local:AnimeCard Margin="10"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Pagination Controls Bottom -->
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center"
                               Spacing="16"
                               Margin="0,20,0,0">
                        <Button Content="Previous"
                               Command="{Binding PreviousPageCommand}"
                               IsEnabled="{Binding CanGoPrevious}"
                               Padding="16,8"
                               Background="#3A3A3A"/>
                        <TextBlock Text="{Binding CurrentPage}"
                                  FontSize="16"
                                  VerticalAlignment="Center"
                                  Margin="8,0"/>
                        <TextBlock Text="/"
                                  FontSize="16"
                                  VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding TotalPages}"
                                  FontSize="16"
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0"/>
                        <Button Content="Next"
                               Command="{Binding NextPageCommand}"
                               IsEnabled="{Binding CanGoNext}"
                               Padding="16,8"
                               Background="#3A3A3A"/>
                    </StackPanel>

                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>