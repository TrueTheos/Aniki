<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Aniki.ViewModels"
             xmlns:local="clr-namespace:Aniki.Views"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="Aniki.Views.AnimeBrowseView"
             x:DataType="vm:AnimeBrowseViewModel">
    
    <Grid RowDefinitions="Auto,*">
        <!-- Search Bar and Back Button -->
        <Grid Grid.Row="0"
              ColumnDefinitions="Auto,*,Auto"
              Background="#2A2A2A"
              Margin="0,0,0,20">

            <!-- Back Button -->
            <Button Grid.Column="0"
                    Content="Back"
                    Command="{Binding GoBackCommand}"
                    IsVisible="{Binding IsSearchMode}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="0,0,20,0"
                    Padding="16,8"
                    Background="#3A3A3A"/>

            <!-- Search Bar -->
            <Grid Grid.Column="1" HorizontalAlignment="Stretch">
                <TextBox Text="{Binding SearchQuery}"
                         Watermark="Search anime..."
                         FontSize="16"
                         Padding="12,8,40,8"
                         CornerRadius="8"
                         Background="#3A3A3A"
                         BorderThickness="0"
                         VerticalContentAlignment="Center"/>

                <PathIcon Data="{StaticResource search_glass}"
                          Foreground="#FFAAAAAA"
                          Width="16"
                          Height="16"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"
                          Margin="0,0,12,0"/>
            </Grid>
        </Grid>

        <!-- Content Area -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Disabled">
            <StackPanel Spacing="40" Margin="20">
                
                <!-- Loading Indicator -->
                <TextBlock Text="Loading..."
                          FontSize="18"
                          HorizontalAlignment="Center"
                          IsVisible="{Binding IsLoading}"/>

                <!-- Categories View -->
                <StackPanel Spacing="40" IsVisible="{Binding ShowCategories}">
                    
                    <!-- Trending Now -->
                    <StackPanel Spacing="16">
                        <TextBlock Text="Trending Now"
                                  FontSize="24"
                                  FontWeight="Bold"/>
                        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                     VerticalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding TrendingNow}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="16"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <local:AnimeCard Image="{Binding Image}"
                                                       Title="{Binding Title}"
                                                       Status="{Binding Status}"
                                                       AnimeId="{Binding AnimeId}"
                                                       StatusChangeRequested="AnimeCard_StatusChangeRequested"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>

                    <!-- Popular This Season -->
                    <StackPanel Spacing="16">
                        <TextBlock Text="Popular This Season"
                                  FontSize="24"
                                  FontWeight="Bold"/>
                        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                     VerticalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding PopularThisSeason}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="16"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <local:AnimeCard Image="{Binding Image}"
                                                       Title="{Binding Title}"
                                                       Status="{Binding Status}"
                                                       AnimeId="{Binding AnimeId}"
                                                       StatusChangeRequested="AnimeCard_StatusChangeRequested"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>

                    <!-- Popular Upcoming -->
                    <StackPanel Spacing="16">
                        <TextBlock Text="Popular Upcoming"
                                  FontSize="24"
                                  FontWeight="Bold"/>
                        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                     VerticalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding PopularUpcoming}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="16"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <local:AnimeCard Image="{Binding Image}"
                                                       Title="{Binding Title}"
                                                       Status="{Binding Status}"
                                                       AnimeId="{Binding AnimeId}"
                                                       StatusChangeRequested="AnimeCard_StatusChangeRequested"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>

                    <!-- Trending All Time -->
                    <StackPanel Spacing="16">
                        <TextBlock Text="Trending All Time"
                                  FontSize="24"
                                  FontWeight="Bold"/>
                        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                     VerticalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding TrendingAllTime}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="16"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <local:AnimeCard Image="{Binding Image}"
                                                       Title="{Binding Title}"
                                                       Status="{Binding Status}"
                                                       AnimeId="{Binding AnimeId}"
                                                       StatusChangeRequested="AnimeCard_StatusChangeRequested"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>

                </StackPanel>

                <!-- Search Results View -->
                <StackPanel Spacing="20" IsVisible="{Binding IsSearchMode}">
                    
                    <!-- Pagination Controls Top -->
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center"
                               Spacing="16">
                        <Button Content="Previous"
                               Command="{Binding PreviousPageCommand}"
                               IsEnabled="{Binding CanGoPrevious}"
                               Padding="16,8"
                               Background="#3A3A3A"/>
                        <TextBlock Text="{Binding CurrentPage}"
                                  FontSize="16"
                                  VerticalAlignment="Center"
                                  Margin="8,0"/>
                        <TextBlock Text="/"
                                  FontSize="16"
                                  VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding TotalPages}"
                                  FontSize="16"
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0"/>
                        <Button Content="Next"
                               Command="{Binding NextPageCommand}"
                               IsEnabled="{Binding CanGoNext}"
                               Padding="16,8"
                               Background="#3A3A3A"/>
                    </StackPanel>

                    <!-- Search Results Grid -->
                    <ItemsControl ItemsSource="{Binding SearchResults}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" 
                                          HorizontalAlignment="Center"
                                          ItemWidth="180"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <local:AnimeCard Image="{Binding Image}"
                                               Title="{Binding Title}"
                                               Status="{Binding Status}"
                                               AnimeId="{Binding AnimeId}"
                                               StatusChangeRequested="AnimeCard_StatusChangeRequested"
                                               Margin="10"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Pagination Controls Bottom -->
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center"
                               Spacing="16"
                               Margin="0,20,0,0">
                        <Button Content="Previous"
                               Command="{Binding PreviousPageCommand}"
                               IsEnabled="{Binding CanGoPrevious}"
                               Padding="16,8"
                               Background="#3A3A3A"/>
                        <TextBlock Text="{Binding CurrentPage}"
                                  FontSize="16"
                                  VerticalAlignment="Center"
                                  Margin="8,0"/>
                        <TextBlock Text="/"
                                  FontSize="16"
                                  VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding TotalPages}"
                                  FontSize="16"
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0"/>
                        <Button Content="Next"
                               Command="{Binding NextPageCommand}"
                               IsEnabled="{Binding CanGoNext}"
                               Padding="16,8"
                               Background="#3A3A3A"/>
                    </StackPanel>

                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>