<UserControl
    x:Class="Aniki.Views.CalendarView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
    xmlns:vm="clr-namespace:Aniki.ViewModels;assembly=Aniki"
    x:DataType="vm:CalendarViewModel">
    <UserControl.Styles>
        <!--  Styles  -->
        <Style Selector="Button.nav-button">
            <Setter Property="Background" Value="{StaticResource Background0}" />
            <Setter Property="Foreground" Value="{StaticResource White}" />
            <Setter Property="BorderBrush" Value="#333333" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="Margin" Value="4,0" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="MinWidth" Value="40" />
            <Setter Property="Height" Value="32" />
        </Style>

        <Style Selector="Button.nav-button:pointerover">
            <Setter Property="Background" Value="{StaticResource Background1}" />
            <Setter Property="BorderBrush" Value="#555555" />
        </Style>

        <Style Selector="Button.nav-button:pressed">
            <Setter Property="Background" Value="#333333" />
        </Style>

        <!--  Today button special styling  -->
        <Style Selector="Button.today-button">
            <Setter Property="Background" Value="{StaticResource Primary}" />
            <Setter Property="Foreground" Value="{StaticResource White}" />
            <Setter Property="BorderBrush" Value="{StaticResource Primary}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="Margin" Value="4,0" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Height" Value="32" />
        </Style>

        <Style Selector="Button.today-button:pointerover">
            <Setter Property="Background" Value="{StaticResource PrimaryDarker}" />
        </Style>
    </UserControl.Styles>

    <DockPanel x:Name="Root">
        <!--  Header with navigation  -->
        <Border
            Padding="16,12"
            Background="{StaticResource Background0}"
            BorderBrush="#333333"
            BorderThickness="0,0,0,1"
            DockPanel.Dock="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Left side - Title  -->
                <StackPanel
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="{StaticResource White}"
                        Text="Anime Schedule" />
                </StackPanel>

                <!--  Center - Navigation  -->
                <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Classes="nav-button"
                        Command="{Binding GoBackWeekCommand}"
                        ToolTip.Tip="Go by back one week">
                        <Image Source="{SvgImage /Resources/Icons/doubleChevronLeft_icon.svg}" Width="16" Height="16"/>
                    </Button>
                    <Button
                        Classes="nav-button"
                        Command="{Binding GoBackDayCommand}"
                        ToolTip.Tip="Previous day">
                        <Image Source="{SvgImage /Resources/Icons/chevronLeft_icon.svg}" Width="16" Height="16"/>
                    </Button>

                    <Button
                        Classes="today-button"
                        Command="{Binding GoToTodayCommand}"
                        Content="Today"
                        ToolTip.Tip="Go to today" />
                    <Button
                        Classes="nav-button"
                        Command="{Binding GoForwardDayCommand}"
                        ToolTip.Tip="Next day">
                        <Image Source="{SvgImage /Resources/Icons/chevronRight_icon.svg}" Width="16" Height="16"/>
                    </Button>
                    <Button
                        Classes="nav-button"
                        Command="{Binding GoForwardWeekCommand}"
                        ToolTip.Tip="Go forward by one week">
                        <Image Source="{SvgImage /Resources/Icons/doubleChevronRight_icon.svg}" Width="16" Height="16"/>
                    </Button>
                </StackPanel>

                <!--  Right side - View options  -->
                <StackPanel
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <ToggleButton
                        Content="My Anime"
                        IsChecked="{Binding ShowOnlyMyAnime}" />
                </StackPanel>
            </Grid>
        </Border>

        <!--  Loading indicator  -->
        <Border
            Height="4"
            Background="{StaticResource Background0}"
            DockPanel.Dock="Top"
            IsVisible="{Binding IsLoading}">
            <ProgressBar
                Height="4"
                Background="Transparent"
                Foreground="{StaticResource Primary}"
                IsIndeterminate="True" />
        </Border>

        <!--  Main calendar grid  -->
        <ScrollViewer
            Background="{StaticResource Background0}"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto">

            <ItemsControl Margin="8,0" ItemsSource="{Binding Days}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="7" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="0,0,0,0"
                            BorderBrush="#2A2A2A"
                            BorderThickness="0,0,1,0">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!--  Day header  -->
                                <Border
                                    Grid.Row="0"
                                    Padding="12,8"
                                    Background="{StaticResource Background1}"
                                    BorderBrush="#333333"
                                    BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="{StaticResource White}"
                                            Text="{Binding DayName}" />

                                        <TextBlock
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            Foreground="#AAAAAA"
                                            Text="{Binding Date, StringFormat='MMM dd'}" />
                                    </Grid>
                                </Border>

                                <!--  Timeline area  -->
                                <ScrollViewer
                                    Grid.Row="1"
                                    HorizontalScrollBarVisibility="Disabled"
                                    VerticalScrollBarVisibility="Hidden">
                                    <ListBox DoubleTapped="DoubleClickAnime" ItemsSource="{Binding Items}">
                                        <ListBox.Styles>
                                            <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                                                <Setter Property="Background" Value="Transparent" />
                                            </Style>
                                        </ListBox.Styles>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <!--  Air time  -->
                                                    <TextBlock
                                                        Margin="8,0,0,0"
                                                        FontSize="11"
                                                        Foreground="#666666"
                                                        Text="{Binding AiringAt, StringFormat='h:mm tt'}" />

                                                    <Border
                                                        Width="180"
                                                        Margin="8,2"
                                                        Padding="0"
                                                        Background="{StaticResource Background1}"
                                                        BorderBrush="{Binding Type, Converter={StaticResource AnimeTypeToColorConverter}}"
                                                        BorderThickness="0,0,3,0"
                                                        ClipToBounds="True"
                                                        CornerRadius="8">

                                                        <Border.Effect>
                                                            <DropShadowEffect
                                                                BlurRadius="8"
                                                                OffsetX="0"
                                                                OffsetY="2"
                                                                Opacity="0.3"
                                                                Color="#000000" />
                                                        </Border.Effect>

                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>
                                                            <!--  Anime cover image  -->
                                                            <Border
                                                                Grid.Column="0"
                                                                Width="48"
                                                                Height="64"
                                                                Margin="0"
                                                                ClipToBounds="True"
                                                                CornerRadius="6,0,0,6">
                                                                <Image
                                                                    VerticalAlignment="Center"
                                                                    asyncImageLoader:ImageLoader.Source="{Binding ImageUrl}"
                                                                    Stretch="UniformToFill" />
                                                            </Border>

                                                            <!--  Content area  -->
                                                            <StackPanel
                                                                Grid.Column="1"
                                                                Margin="12,6"
                                                                VerticalAlignment="Center">

                                                                <!--  Title  -->
                                                                <TextBlock
                                                                    FontSize="13"
                                                                    FontWeight="Medium"
                                                                    Foreground="{StaticResource White}"
                                                                    LineHeight="16"
                                                                    MaxLines="2"
                                                                    Text="{Binding Title}"
                                                                    TextWrapping="Wrap" />

                                                                <!--  Episode info  -->
                                                                <TextBlock
                                                                    Margin="0,2,0,0"
                                                                    FontSize="11"
                                                                    Foreground="#AAAAAA"
                                                                    Text="{Binding EpisodeInfo}" />
                                                            </StackPanel>

                                                            <!--  Status indicators  -->
                                                            <StackPanel
                                                                Grid.Column="2"
                                                                Margin="0,6,8,6"
                                                                VerticalAlignment="Top">

                                                                <!--  Live indicator  -->
                                                                <Border
                                                                    Width="8"
                                                                    Height="8"
                                                                    Background="#FF4444"
                                                                    CornerRadius="4"
                                                                    IsVisible="{Binding IsAiringNow}">
                                                                    <Border.Effect>
                                                                        <DropShadowEffect
                                                                            BlurRadius="6"
                                                                            Opacity="0.8"
                                                                            Color="#FF4444" />
                                                                    </Border.Effect>
                                                                </Border>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</UserControl>