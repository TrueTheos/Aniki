<UserControl
    x:Class="Aniki.Views.CalendarView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
    xmlns:vm="clr-namespace:Aniki.ViewModels;assembly=Aniki"
    x:DataType="vm:CalendarViewModel">
    <UserControl.Styles>
        <Style Selector="Button.today-button">
            <Setter Property="Background" Value="{StaticResource RedColor}" />
            <Setter Property="Foreground" Value="{StaticResource White}" />
            <Setter Property="BorderBrush" Value="{StaticResource RedColor}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="Margin" Value="4,0" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Height" Value="32" />
        </Style>

        <Style Selector="ListBoxItem">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0" />
        </Style>
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
    </UserControl.Styles>

    <DockPanel x:Name="Root" Margin="0,50,0,0" Background="{StaticResource BackgroundGray}">
        <Border
            Padding="16,12"
            Background="{StaticResource BackgroundBlack}"
            BorderBrush="#333333"
            BorderThickness="0,0,0,1"
            DockPanel.Dock="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="{StaticResource White}"
                        Text="Anime Schedule" />
                </StackPanel>

                <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Classes="nav-button"
                        Command="{Binding GoBackWeekCommand}"
                        ToolTip.Tip="Go by back one week">
                        <Image Source="{SvgImage /Resources/Icons/doubleChevronLeft_icon.svg}" Width="16" Height="16"/>
                    </Button>
                    <Button
                        Classes="nav-button"
                        Command="{Binding GoBackDayCommand}"
                        ToolTip.Tip="Previous day">
                        <Image Source="{SvgImage /Resources/Icons/chevronLeft_icon.svg}" Width="16" Height="16"/>
                    </Button>

                    <Button
                        Classes="today-button"
                        Command="{Binding GoToTodayCommand}"
                        Content="Today"
                        ToolTip.Tip="Go to today" />
                    <Button
                        Classes="nav-button"
                        Command="{Binding GoForwardDayCommand}"
                        ToolTip.Tip="Next day">
                        <Image Source="{SvgImage /Resources/Icons/chevronRight_icon.svg}" Width="16" Height="16"/>
                    </Button>
                    <Button
                        Classes="nav-button"
                        Command="{Binding GoForwardWeekCommand}"
                        ToolTip.Tip="Go forward by one week">
                        <Image Source="{SvgImage /Resources/Icons/doubleChevronRight_icon.svg}" Width="16" Height="16"/>
                    </Button>
                </StackPanel>

                <StackPanel
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <ToggleButton
                        Content="My Anime"
                        IsChecked="{Binding ShowOnlyMyAnime}" />
                </StackPanel>
            </Grid>
        </Border>

        <!--  Loading indicator  -->
        <Border
            Height="4"
            Background="{StaticResource Background0}"
            DockPanel.Dock="Top"
            IsVisible="{Binding IsLoading}">
            <ProgressBar
                Height="4"
                Background="Transparent"
                Foreground="{StaticResource RedColor}"
                IsIndeterminate="True" />
        </Border>

        <ScrollViewer
            Background="{StaticResource BackgroundBlack}"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto">

            <ItemsControl 
                Margin="8,0" 
                ItemsSource="{Binding Days}" 
                Background="{StaticResource BackgroundGray}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="7" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="0"
                            BorderBrush="#2A2A2A"
                            BorderThickness="0,0,1,0"
                            Background="{StaticResource BackgroundGray}">

                            <Grid Background="{StaticResource BackgroundGray}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!--  Day header  -->
                                <Border
                                    Grid.Row="0"
                                    Padding="12,8"
                                    Background="{StaticResource BackgroundBlack}"
                                    BorderBrush="#333333"
                                    BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="{StaticResource White}"
                                            Text="{Binding DayName}" />

                                        <TextBlock
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            Foreground="#AAAAAA"
                                            Text="{Binding Date, StringFormat='MMM dd'}" />
                                    </Grid>
                                </Border>

                                <ListBox 
                                    Grid.Row="1"
                                    DoubleTapped="DoubleClickAnime" 
                                    ItemsSource="{Binding Items}" 
                                    Background="{StaticResource BackgroundGray}"
                                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                    ScrollViewer.VerticalScrollBarVisibility="Disabled">
                                    
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VirtualizingStackPanel />
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                    
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Background="Transparent">
                                                <!--  Air time  -->
                                                <TextBlock
                                                    Margin="8,4,0,0"
                                                    FontSize="11"
                                                    Foreground="#666666"
                                                    Text="{Binding AiringAt, StringFormat='h:mm tt'}" />

                                                <Border
                                                    Width="180"
                                                    Margin="8,2,8,4"
                                                    Padding="0"
                                                    Background="{StaticResource BackgroundBlack}"
                                                    BorderBrush="{Binding Type, Converter={StaticResource AnimeTypeToColorConverter}}"
                                                    BorderThickness="3,0,3,0"
                                                    CornerRadius="8"
                                                    BoxShadow="0 2 8 0 #4D000000">

                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="48" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <Border
                                                            Grid.Column="0"
                                                            Width="48"
                                                            Height="64"
                                                            CornerRadius="6,0,0,6"
                                                            ClipToBounds="True">
                                                            <Image
                                                                asyncImageLoader:ImageLoader.Source="{Binding ImageUrl}"
                                                                Stretch="UniformToFill"
                                                                RenderOptions.BitmapInterpolationMode="LowQuality" />
                                                        </Border>

                                                        <!--  Content area  -->
                                                        <StackPanel
                                                            Grid.Column="1"
                                                            Margin="12,6"
                                                            VerticalAlignment="Center"
                                                            Cursor="Hand"
                                                            ToolTip.Tip="Click click to show details">

                                                            <!--  Title  -->
                                                            <TextBlock
                                                                FontSize="13"
                                                                FontWeight="Medium"
                                                                Foreground="{StaticResource White}"
                                                                LineHeight="16"
                                                                MaxLines="2"
                                                                Text="{Binding Title}"
                                                                TextTrimming="CharacterEllipsis"
                                                                TextWrapping="Wrap" />

                                                            <!--  Episode info  -->
                                                            <TextBlock
                                                                Margin="0,2,0,0"
                                                                FontSize="11"
                                                                Foreground="#AAAAAA"
                                                                Text="{Binding EpisodeInfo}" />
                                                        </StackPanel>

                                                        <Border
                                                            Grid.Column="2"
                                                            Width="8"
                                                            Height="8"
                                                            Margin="0,6,8,6"
                                                            VerticalAlignment="Top"
                                                            Background="{StaticResource RedColor}"
                                                            CornerRadius="4"
                                                            IsVisible="{Binding IsAiringNow}"
                                                            BoxShadow="0 0 6 0 #CC0000" />
                                                    </Grid>
                                                </Border>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</UserControl>