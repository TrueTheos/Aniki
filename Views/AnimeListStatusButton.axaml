<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="200"
             x:Class="Aniki.Views.AnimeListStatusButton">

    <UserControl.Styles>
        <Style Selector="Button.SmallButton">
            <Setter Property="RenderTransformOrigin" Value="1,1"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="{DynamicResource Background1}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="CornerRadius" Value="25"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RenderTransform" Value="scale(1)"/>
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Button:pointerover">
            <Setter Property="RenderTransform" Value="scale(1.1)"/>
        </Style>
        <Style Selector="UserControl Button#MainButton">
            <Setter Property="RenderTransform" Value="scale(0)"/>
        </Style>
        <Style Selector="UserControl:pointerover Button#MainButton">
            <Setter Property="RenderTransform" Value="scale(1)"/>
        </Style>
        <Style Selector="UserControl Button#StatusButton1,
                           UserControl Button#StatusButton2,
                           UserControl Button#StatusButton3">
            <Setter Property="RenderTransform" Value="scale(0)"/>
        </Style>
    </UserControl.Styles>

    <Grid>
        <StackPanel x:Name="StatusPanel" Orientation="Vertical"
                    HorizontalAlignment="Right" VerticalAlignment="Bottom"
                    Margin="0,0,10,60">
            <Button Classes="SmallButton" x:Name="StatusButton1">
                <PathIcon Width="20" Height="20" Data="{StaticResource globe_regular}" Foreground="White"/>
            </Button>
            <Button Classes="SmallButton" x:Name="StatusButton2">
                <PathIcon Width="20" Height="20" Data="{StaticResource globe_regular}" Foreground="White"/>
            </Button>
            <Button Classes="SmallButton" x:Name="StatusButton3">
                <PathIcon Width="20" Height="20" Data="{StaticResource globe_regular}" Foreground="White"/>
            </Button>
        </StackPanel>

        <Button x:Name="MainButton" Content="+"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Width="40"
                Height="40"
                Margin="10"
                CornerRadius="25"
                Background="{StaticResource Background1}"/>
    </Grid>
</UserControl>