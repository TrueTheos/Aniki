			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Padding" Value="0"/>
			<Setter Property="Cursor" Value="Hand"/>
		</Style>
		<Style Selector="Button.SearchButton:pointerover">
			<Setter Property="Background" Value="Transparent"/>
		</Style>
		<Style Selector="Button.SearchButton:pressed">
			<Setter Property="Background" Value="Transparent"/>
		</Style>
		<Style Selector="Button.SearchButton:pointerover /template/ ContentPresenter">
			<Setter Property="Background" Value="Transparent"/>
		</Style>
		<Style Selector="Button.SearchButton:pressed /template/ ContentPresenter">
			<Setter Property="Background" Value="Transparent"/>
		</Style>
	</Window.Styles>

	<Panel>
		<ExperimentalAcrylicBorder IsHitTestVisible="False">
			<ExperimentalAcrylicBorder.Material>
				<ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    TintColor="#2A2A3A"
                    TintOpacity="0.5"
                    MaterialOpacity="0.2" />
			</ExperimentalAcrylicBorder.Material>
		</ExperimentalAcrylicBorder>

		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<Grid Grid.Column="0" Margin="10,35,5,10">
				<Grid.RowDefinitions>
					<RowDefinition Height="*"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<StackPanel Grid.Row="0" Orientation="Vertical" Spacing="5" Width="150" VerticalAlignment="Top">
					<StackPanel Grid.Column="0" Orientation="Horizontal">
						<Border CornerRadius="24" Width="30" Height="30" ClipToBounds="True" Background="#7E57C2">
							<Image Source="{Binding ProfileImage}" Width="36" Height="36" Stretch="UniformToFill"/>
						</Border>
						<TextBlock Text="{Binding Username}"
								   VerticalAlignment="Center"
								   Margin="12,0,0,0"
								   FontSize="18"
								   FontWeight="Bold"
								   Foreground="#E0E0E0"/>
					</StackPanel>

					<StackPanel Margin="0,10,0,0" Orientation="Horizontal" Spacing="8">
						<Grid>
							<TextBox Name="SearchBox"
									 Width="145"
									 Watermark="Search"
									 CornerRadius="7"
									 Padding="10,0,30,0"
									 VerticalContentAlignment="Center"
									 Text="{Binding SearchQuery, Mode=TwoWay}"
									 Background="#FF3E3E3E"
									 Foreground="#FFE0E0E0"
									 BorderBrush="#FF505050"
									 BorderThickness="1" />

							<Button HorizontalAlignment="Right"
								VerticalAlignment="Center"
								Margin="0,0,8,0"
								Background="Transparent"
								Classes="SearchButton"
								BorderThickness="0" Padding="0" Cursor="Hand"
								Command="{Binding SearchCommand}">
								<PathIcon Name="SearchIcon" Width="16" Height="16" Foreground="#FFAAAAAA"
									Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z" />
								<Button.Styles>
									<Style Selector="Button:pointerover PathIcon">
										<Setter Property="Foreground" Value="#FFD0D0D0" />
									</Style>
									<Style Selector="Button:pressed PathIcon">
										<Setter Property="Foreground" Value="White" />
									</Style>
								</Button.Styles>
							</Button>
						</Grid>
					</StackPanel>

					<Button Margin="0,10,0,0" Name="MainPageButton" Classes="MenuButton" Command="{Binding ShowMainPageCommand}">
						<StackPanel Orientation="Horizontal" Spacing="8">
							<PathIcon Data="{StaticResource home_regular}" Width="16" Height="16"/>
							<TextBlock Text="Main Page" VerticalAlignment="Center"/>
						</StackPanel>
					</Button>
					<Button Name="WatchPageButton" Classes="MenuButton" Command="{Binding ShowWatchPageCommand}">
						<StackPanel Orientation="Horizontal" Spacing="8">
							<PathIcon Data="{StaticResource play_regular}" Width="16" Height="16"/>
							<TextBlock Text="Watch" VerticalAlignment="Center"/>
						</StackPanel>
					</Button>
					<Button Name="CalendarPageButton" Classes="MenuButton" Command="{Binding ShowCalendarPageCommand}">
						<StackPanel Orientation="Horizontal" Spacing="8">
							<PathIcon Data="{StaticResource calendar_regular}" Width="16" Height="16"/>
							<TextBlock Text="Calendar" VerticalAlignment="Center"/>
						</StackPanel>
					</Button>
					<Button Name="StatsPageButton" Classes="MenuButton" Command="{Binding ShowStatsPageCommand}">
						<StackPanel Orientation="Horizontal" Spacing="8">
							<PathIcon Data="{StaticResource data_usage_regular}" Width="16" Height="16"/>
							<TextBlock Text="Stats" VerticalAlignment="Center"/>
						</StackPanel>
					</Button>
				</StackPanel>

				<StackPanel Grid.Row="1" Orientation="Vertical" Spacing="5" Width="150" VerticalAlignment="Bottom">
					<Button Name="SettingsPageButton" Classes="MenuButton" Command="{Binding OpenSettingsCommand}">
						<StackPanel Orientation="Horizontal" Spacing="8">
							<PathIcon Data="{StaticResource settings_regular}" Width="16" Height="16"/>
							<TextBlock Text="Settings" VerticalAlignment="Center"/>
						</StackPanel>
					</Button>
				</StackPanel>
			</Grid>

			<Border Grid.Column="1" Margin="0,30,0,0" 
					BorderBrush="#5453531a" BorderThickness="2,2,2,2" 
					CornerRadius="15" ClipToBounds="True">
				<Grid x:Name="Root">
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="*"/>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>

					<Border Grid.Row="0" Background="#2A2A3A" Padding="10,5" BoxShadow="0 2 10 0 #20000000"
							BorderBrush="#1a545353" BorderThickness="0,0,0,2">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto"/>
								<ColumnDefinition Width="*"/>
								<ColumnDefinition Width="Auto"/>
							</Grid.ColumnDefinitions>
							<StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
								<TextBlock Text="Aniki" FontSize="24" FontWeight="Bold" Foreground="#9575CD"/>
