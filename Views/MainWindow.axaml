<Window
    x:Class="Aniki.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:Aniki.Views;assembly=Aniki"
    xmlns:vm="clr-namespace:Aniki.ViewModels;assembly=Aniki"
    Title="Aniki - Anime Client"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    x:DataType="vm:MainViewModel"
    Background="#000000"
    ExtendClientAreaTitleBarHeightHint="30"
    ExtendClientAreaToDecorationsHint="True"
    TransparencyLevelHint="Blur"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>

    <Window.Styles>
        <!--  Base Styles  -->
        <Style Selector="Button.MenuButton">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="CornerRadius" Value="5" />
        </Style>

        <Style Selector="Button.Basic">
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Background" Value="{StaticResource Background1}" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.Basic:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{StaticResource Background0}" />
        </Style>

        <Style Selector="Button.Purple">
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Background" Value="{StaticResource PrimaryDarker}" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.Purple:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{StaticResource Primary}" />
        </Style>

        <Style Selector="ComboBox">
            <Setter Property="Background" Value="#3E3E3E" />
            <Setter Property="Foreground" Value="{StaticResource White}" />
            <Setter Property="CornerRadius" Value="4" />
        </Style>
        <Style Selector="TextBox">
            <Setter Property="Background" Value="{StaticResource Background0}" />
            <Setter Property="Foreground" Value="{StaticResource White}" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="8,6" />
        </Style>
        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0,4" />
        </Style>
        <Style Selector="TabItem">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="Foreground" Value="{StaticResource White}" />
        </Style>
        <Style Selector="Panel.detailPanel TextBlock">
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style Selector="Panel.detailPanel TextBlock.label">
            <Setter Property="Margin" Value="0,0,5,0" />
        </Style>
        <Style Selector="Panel.detailPanel TextBlock.value">
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style Selector="Button.SearchButton">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style Selector="Button.SearchButton:pointerover">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.SearchButton:pressed">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.SearchButton:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.SearchButton:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
    </Window.Styles>

    <Panel>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    MaterialOpacity="0.5"
                    TintColor="#000000"
                    TintOpacity=".99" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160" MinWidth="160" MaxWidth="300" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="10,35,5,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0"
                    VerticalAlignment="Top"
                    Orientation="Vertical"
                    Spacing="5">
                    <!--  Profile picture and nickname  -->
                    <StackPanel Orientation="Horizontal">
                        <Border
                            Width="30"
                            Height="30"
                            Background="{StaticResource Primary}"
                            ClipToBounds="True"
                            CornerRadius="24">
                            <Image
                                Width="36"
                                Height="36"
                                Source="{Binding ProfileImage}"
                                Stretch="UniformToFill" />
                        </Border>
                        <TextBlock
                            Margin="12,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="18"
                            FontWeight="Bold"
                            TextWrapping="Wrap"
                            Foreground="{StaticResource White}"
                            Text="{Binding Username}" />
                    </StackPanel>

                    <!--  Search box  -->
                    <Grid
                        Margin="0,15,0,0">
                        <Grid HorizontalAlignment="Stretch">
                            <TextBox
                                Name="SearchBox"
                                MinWidth="150"
                                Padding="10,0,30,0"
                                VerticalContentAlignment="Center"
                                Background="#FF3E3E3E"
                                BorderBrush="#FF505050"
                                BorderThickness="1"
                                CornerRadius="7"
                                Foreground="#FFE0E0E0"
                                Text="{Binding SearchQuery, Mode=TwoWay}"
                                Watermark="Search">
                                <TextBox.KeyBindings>
                                    <KeyBinding Gesture="Enter" Command="{Binding SearchCommand}" />
                                </TextBox.KeyBindings>
                            </TextBox>

                            <Button
                                Margin="0,0,8,0"
                                Padding="0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                Classes="SearchButton"
                                Command="{Binding SearchCommand}"
                                Cursor="Hand">
                                <Image Source="{SvgImage /Resources/Icons/search_icon.svg}" x:Name="SearchIcon" Width="16" Height="16"/>
                                <Button.Styles>
                                    <Style Selector="Button:pointerover PathIcon">
                                        <Setter Property="Foreground" Value="#FFD0D0D0" />
                                    </Style>
                                    <Style Selector="Button:pressed PathIcon">
                                        <Setter Property="Foreground" Value="White" />
                                    </Style>
                                </Button.Styles>
                            </Button>
                        </Grid>
                    </Grid>

                    <!--  Navigation buttons  -->

                    <Button
                        Name="MainPageButton"
                        Margin="0,10,0,0"
                        Classes="MenuButton"
                        Command="{Binding ShowAnimeBrowsePageCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Image Source="{SvgImage /Resources/Icons/home_icon.svg}" Width="20" Height="20"/>
                            <TextBlock VerticalAlignment="Center" Text="Main Page" />
                        </StackPanel>
                    </Button>
                    <Button
                        Name="WatchPageButton"
                        Classes="MenuButton"
                        Command="{Binding ShowWatchPageCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Image Source="{SvgImage /Resources/Icons/play_icon.svg}" Width="20" Height="20"/>
                            <TextBlock VerticalAlignment="Center" Text="Watch" />
                        </StackPanel>
                    </Button>
                    <Button
                        Name="CalendarPageButton"
                        Classes="MenuButton"
                        Command="{Binding ShowCalendarPageCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Image Source="{SvgImage /Resources/Icons/calendar_icon.svg}" Width="20" Height="20"/>
                            <TextBlock VerticalAlignment="Center" Text="Calendar" />
                        </StackPanel>
                    </Button>
                    <Button
                        Name="StatsPageButton"
                        Classes="MenuButton"
                        Command="{Binding ShowStatsPageCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Image Source="{SvgImage /Resources/Icons/stats_icon.svg}" Width="20" Height="20"/>
                            <TextBlock VerticalAlignment="Center" Text="Stats" />
                        </StackPanel>
                    </Button>
                    <StackPanel Margin="0,10,0,0" IsVisible="{Binding TodayAnime.Count}">
                        <TextBlock Text="Airing Today" FontWeight="Bold" FontSize="16" Foreground="White" Margin="0,0,0,5"/>
                        <ListBox ItemsSource="{Binding TodayAnime}" Background="Transparent" BorderThickness="0" SelectionChanged="TodayAnime_OnSelectionChanged">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock VerticalAlignment="Center" Text="â€¢"/>
                                        <TextBlock VerticalAlignment="Center" Text="{Binding Title}" Foreground="White" FontSize="15" Padding="10,0,0,0"
                                                   TextWrapping="Wrap"
                                                   ToolTip.Tip="{Binding Title}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </StackPanel>

                <StackPanel
                    Grid.Row="1"
                    VerticalAlignment="Bottom"
                    Orientation="Vertical"
                    Spacing="5">
                    <Button
                        Name="SettingsPageButton"
                        Classes="MenuButton"
                        Command="{Binding OpenSettingsCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Image Source="{SvgImage /Resources/Icons/settings_icon.svg}" Width="20" Height="20" />
                            <TextBlock VerticalAlignment="Center" Text="Settings" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="Transparent"/>

            <!--  Content  -->
            <Border
                Grid.Column="2"
                Margin="0,30,0,0"
                BorderBrush="#5453531a"
                BorderThickness="2,2,2,2"
                ClipToBounds="True"
                CornerRadius="15"
                Background="{StaticResource Background0}">
                <Grid x:Name="Root">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Border
                        Grid.Row="0"
                        Padding="10,5"
                        Background="{StaticResource Background0}"
                        BorderBrush="#1a545353"
                        BorderThickness="0,0,0,2"
                        BoxShadow="0 2 10 0 #20000000">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock
                                    FontSize="24"
                                    FontWeight="Bold"
                                    Foreground="{StaticResource Primary}"
                                    Text="Aniki" />
                                <TextBlock
                                    Margin="5,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="18"
                                    Foreground="{StaticResource White}"
                                    Text=" - MyAnimeList Client" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!--  Loading indicator  -->
                    <Grid Grid.Row="1" IsVisible="{Binding IsLoading}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <ProgressBar
                                Width="300"
                                Height="6"
                                Background="{StaticResource Background0}"
                                Foreground="{StaticResource Primary}"
                                IsIndeterminate="True" />
                            <TextBlock
                                Margin="0,10,0,0"
                                HorizontalAlignment="Center"
                                Foreground="{StaticResource White}"
                                Text="Loading your anime list..." />
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="1" IsVisible="{Binding !IsLoading}">
                        <UserControl Background="{StaticResource Background0}">
                            <UserControl.DataTemplates>
                                <DataTemplate DataType="vm:AnimeDetailsViewModel">
                                    <views:AnimeDetailsView DataContext="{Binding}" />
                                </DataTemplate>
                                <DataTemplate DataType="vm:WatchAnimeViewModel">
                                    <views:WatchAnimeView DataContext="{Binding}" />
                                </DataTemplate>
                                <DataTemplate DataType="vm:CalendarViewModel">
                                    <views:CalendarView />
                                </DataTemplate>
                                <DataTemplate DataType="vm:StatsViewModel">
                                    <views:StatsView />
                                </DataTemplate>
                                <DataTemplate DataType="vm:AnimeBrowseViewModel">
                                    <views:AnimeBrowseView />
                                </DataTemplate>
                            </UserControl.DataTemplates>
                            <ContentControl Content="{Binding CurrentViewModel}" />
                        </UserControl>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Panel>
</Window>