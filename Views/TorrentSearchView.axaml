<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Aniki.ViewModels"
             xmlns:models="clr-namespace:Aniki.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Aniki.Views.TorrentSearchView"
             x:DataType="vm:TorrentSearchViewModel">
    <Grid Margin="0,16,0,0" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Search Controls -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="1" 
                     Text="{Binding TorrentSearchTerms}" 
                     Watermark="Additional search terms..."
                     Margin="20,0"/>

            <Button Grid.Column="2" 
                    Command="{Binding SearchTorrentsCommand}"
                    Background="#E50914"
                    CornerRadius="6"
                    Padding="20,12">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0" Text="Search" FontWeight="SemiBold" FontSize="15" Foreground="White" Margin="0,0,15,0"/>
                    <Image Grid.Column="1" Source="{SvgImage /Resources/Icons/search_icon.svg}" Width="16" Height="16" HorizontalAlignment="Right"/>
                </Grid>
            </Button>
        </Grid>

        <!-- Sort Controls -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Spacing="10" 
                    Margin="0,0,0,15"
                    IsVisible="{Binding TorrentsList.Count, Converter={StaticResource GreaterThanZeroConverter}}">
            <Button Command="{Binding SortBySeedersCommand}"
                    Background="#2A2A2A"
                    CornerRadius="6"
                    Padding="12,8"
                    ToolTip.Tip="Sort by Seeders">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Image Source="{SvgImage /Resources/Icons/swap_icon.svg}" Width="16" Height="16"/>
                    <TextBlock Text="Seeders" Foreground="#E0E0E0" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding SortByReleaseDateCommand}"
                    Background="#2A2A2A"
                    CornerRadius="6"
                    Padding="12,8"
                    ToolTip.Tip="Sort by Release Date">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Image Source="{SvgImage /Resources/Icons/swap_icon.svg}" Width="16" Height="16"/>
                    <TextBlock Text="Release Date" Foreground="#E0E0E0" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Torrent Results -->
        <Grid Grid.Row="2" Margin="0,0,0,0">
            <ProgressBar IsIndeterminate="True" 
                         IsVisible="{Binding IsTorrentsLoading}" 
                         VerticalAlignment="Top" 
                         Margin="0,20,0,0"/>

            <ListBox Background="Transparent" 
                     ItemsSource="{Binding TorrentsList}"
                     IsVisible="{Binding !IsTorrentsLoading}">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="models:NyaaTorrent">
                        <Border Background="#1A1A1A" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                            <Grid ColumnDefinitions="*,Auto,Auto,Auto">
                                <TextBlock Grid.Column="0" 
                                           Text="{Binding FileName}" 
                                           Foreground="#E0E0E0" 
                                           VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="5" Margin="20,0">
                                    <TextBlock Text="{Binding Size}" 
                                               Foreground="#999999" 
                                               VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="5" Margin="20,0">
                                    <PathIcon Width="16" Height="16" Foreground="#4CAF50" Data="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                                    <TextBlock Text="{Binding Seeders}" 
                                               Foreground="#4CAF50" 
                                               VerticalAlignment="Center"/>
                                </StackPanel>

                                <Button Grid.Column="3" 
                                        Command="{Binding $parent[UserControl].((vm:TorrentSearchViewModel)DataContext).DownloadTorrentCommand}"
                                        CommandParameter="{Binding TorrentLink}"
                                        Background="#3A3A3A"
                                        CornerRadius="20"
                                        Width="40" Height="40">
                                    <Image Source="{SvgImage /Resources/Icons/play_icon.svg}" Width="20" Height="20"/>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center" 
                        IsVisible="{Binding TorrentsList.Count, Converter={StaticResource EqualToZeroConverter}}" 
                        Spacing="20">
                <Image Source="/Resources/nothingtoseehere_transparent_small.png" 
                       Width="200" 
                       RenderOptions.BitmapInterpolationMode="HighQuality"/>
                <TextBlock Text="No torrents found. Try a different search!" 
                           Foreground="#888888" 
                           FontSize="16" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>